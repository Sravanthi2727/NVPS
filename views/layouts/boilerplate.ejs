<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Dynamic Title -->
  <title><%= typeof title !== 'undefined' ? title : 'Rabuste Coffee - Premium Robusta Coffee Experience' %></title>
  
  <!-- SEO Meta Tags -->
  <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'Experience the bold revolution of premium Robusta coffee at Rabuste Coffee. Artisanal coffee, community workshops, and cultural experiences.' %>" />
  <meta name="keywords" content="<%= typeof keywords !== 'undefined' ? keywords : 'robusta coffee, premium coffee, coffee franchise, artisanal coffee, coffee culture, community cafe' %>" />
  <meta name="author" content="Rabuste Coffee" />
  <meta name="robots" content="index, follow" />
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content="<%= typeof ogTitle !== 'undefined' ? ogTitle : (typeof title !== 'undefined' ? title : 'Rabuste Coffee - Premium Robusta Coffee Experience') %>" />
  <meta property="og:description" content="<%= typeof ogDescription !== 'undefined' ? ogDescription : (typeof description !== 'undefined' ? description : 'Experience the bold revolution of premium Robusta coffee at Rabuste Coffee. Artisanal coffee, community workshops, and cultural experiences.') %>" />
  <meta property="og:type" content="<%= typeof ogType !== 'undefined' ? ogType : 'website' %>" />
  <meta property="og:url" content="<%= typeof ogUrl !== 'undefined' ? ogUrl : 'https://rabustecoffee.com' %>" />
  <meta property="og:image" content="<%= typeof ogImage !== 'undefined' ? ogImage : '/assets/logo-icon.png' %>" />
  <meta property="og:site_name" content="Rabuste Coffee" />
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="<%= typeof ogTitle !== 'undefined' ? ogTitle : (typeof title !== 'undefined' ? title : 'Rabuste Coffee - Premium Robusta Coffee Experience') %>" />
  <meta name="twitter:description" content="<%= typeof ogDescription !== 'undefined' ? ogDescription : (typeof description !== 'undefined' ? description : 'Experience the bold revolution of premium Robusta coffee at Rabuste Coffee. Artisanal coffee, community workshops, and cultural experiences.') %>" />
  <meta name="twitter:image" content="<%= typeof ogImage !== 'undefined' ? ogImage : '/assets/logo-icon.png' %>" />
  
  <!-- Canonical URL -->
  <link rel="canonical" href="<%= typeof canonicalUrl !== 'undefined' ? canonicalUrl : 'https://rabustecoffee.com' %>" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/assets/logo-icon.png" />
  <link rel="apple-touch-icon" href="/assets/logo-icon.png" />

  <!-- Bootstrap -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- Google Fonts -->
  <link
    href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter&display=swap"
    rel="stylesheet"
  />

  <!-- YOUR CSS -->
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body class="bg-dark text-light">
  <%- body %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- THREE.JS -->
  <script src="https://cdn.jsdelivr.net/npm/three@0.158.0/build/three.min.js"></script>

  <!-- YOUR JS -->
  <script src="/js/three-bg.js"></script>
  <script src="/js/ai.js"></script>
</body>
</html>

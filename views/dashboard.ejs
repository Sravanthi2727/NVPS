<script>
function redirectToPage() {
  const dropdown = document.getElementById('browseDropdown');
  const selectedValue = dropdown.value;
  
  if (selectedValue) {
    window.location.href = selectedValue;
  }
}

document.addEventListener('DOMContentLoaded', function() {
  // Load dashboard data
  loadWishlist();
  loadCart();
  loadWorkshops();
  loadRequests();

  // Handle request type change
  const requestTypeSelect = document.getElementById('requestType');
  if (requestTypeSelect) {
    requestTypeSelect.addEventListener('change', function() {
      const artDetails = document.getElementById('artDetails');
      const workshopDetails = document.getElementById('workshopDetails');
      
      if (this.value === 'sell-art') {
        artDetails.style.display = 'block';
        workshopDetails.style.display = 'none';
      } else if (this.value === 'conduct-workshop') {
        artDetails.style.display = 'none';
        workshopDetails.style.display = 'block';
      } else {
        artDetails.style.display = 'none';
        workshopDetails.style.display = 'none';
      }
    });
  }

  // Handle request submission
  const submitButton = document.getElementById('submitRequest');
  if (submitButton) {
    submitButton.addEventListener('click', function() {
      const form = document.getElementById('requestForm');
      if (form && form.checkValidity()) {
        submitRequest();
      } else if (form) {
        form.reportValidity();
      }
    });
  }
});

function loadWishlist() {
  // Load wishlist from localStorage
  const wishlistItems = JSON.parse(localStorage.getItem('wishlist')) || [];
  renderWishlist(wishlistItems);
}

function loadCart() {
  // Load cart from localStorage
  const cartItems = JSON.parse(localStorage.getItem('cart')) || [];
  renderCart(cartItems);
}

function loadWorkshops() {
  // Load workshop registrations from localStorage
  const registrations = JSON.parse(localStorage.getItem('workshopRegistrations')) || [];
  renderWorkshops(registrations);
}

function loadRequests() {
  // Load requests from localStorage
  const requests = JSON.parse(localStorage.getItem('requests')) || [];
  renderRequests(requests);
}

function renderWishlist(items) {
  const container = document.getElementById('wishlistItems');
  
  if (items.length === 0) {
    container.innerHTML = `
      <div class="col-12 text-center py-5">
        <p style="color: #ffffff; font-size: 0.85rem; margin-bottom: 15px; font-weight: 500;">No items in your wishlist yet.</p>
        <a href="/gallery" class="btn" style="background-color: #d6a45a; border: none; color: #000;">Browse Gallery</a>
      </div>
    `;
    return;
  }

  container.innerHTML = items.map(item => `
    <div class="col-md-4 mb-4">
      <div class="card">
        <img src="${item.image}" class="card-img-top" alt="${item.title}">
        <div class="card-body">
          <h5 class="card-title">${item.title}</h5>
          <p class="card-text">by ${item.artist}</p>
          <p class="card-text"><strong>$${item.price}</strong></p>
          <button class="btn" style="background-color: #d6a45a; border: none; color: #000;">Purchase</button>
          <button class="btn btn-outline-danger btn-sm" onclick="removeFromWishlist(${item.id})">Remove</button>
        </div>
      </div>
    </div>
  `).join('');
}

function renderCart(items) {
  const container = document.getElementById('cartItems');
  
  if (items.length === 0) {
    container.innerHTML = `
      <div class="col-12 text-center py-5">
        <p style="color: #ffffff; font-size: 0.85rem; margin-bottom: 15px; font-weight: 500;">Your cart is empty.</p>
        <a href="/menu" class="btn" style="background-color: #d6a45a; border: none; color: #000;">View Menu</a>
      </div>
    `;
    return;
  }

  let total = 0;
  const itemsHtml = items.map(item => {
    total += item.price * item.quantity;
    return `
      <div class="col-12 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col-md-2">
                <img src="${item.image}" class="img-fluid rounded" alt="${item.name}">
              </div>
              <div class="col-md-4">
                <h5>${item.name}</h5>
                <p>$${item.price} each</p>
              </div>
              <div class="col-md-3">
                <div class="input-group">
                  <button class="btn btn-outline-secondary" onclick="updateQuantity(${item.id}, -1)">-</button>
                  <input type="number" class="form-control text-center" value="${item.quantity}" min="1" readonly>
                  <button class="btn btn-outline-secondary" onclick="updateQuantity(${item.id}, 1)">+</button>
                </div>
              </div>
              <div class="col-md-2">
                <h5>$${(item.price * item.quantity).toFixed(2)}</h5>
              </div>
              <div class="col-md-1">
                <button class="btn btn-outline-danger" onclick="removeFromCart(${item.id})">
                  <i class="bi bi-trash"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    `;
  }).join('');

  container.innerHTML = itemsHtml + `
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-8">
              <h4 style="color: #d6a45a; font-weight: bold;">Total: $${total.toFixed(2)}</h4>
            </div>
            <div class="col-md-4 text-end">
              <button class="btn" style="background-color: #d6a45a; border: none; color: #000;">Proceed to Checkout</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  `;
}

function renderWorkshops(registrations) {
  const container = document.getElementById('workshopItems');
  
  if (registrations.length === 0) {
    container.innerHTML = `
      <div class="col-12 text-center py-5">
        <p style="color: #ffffff; font-size: 0.85rem; margin-bottom: 15px; font-weight: 500;">Discover your creative potential</p>
        <a href="/workshops" class="btn" style="background-color: #d6a45a; border: none; color: #000;">Browse Workshops</a>
      </div>
    `;
    return;
  }

  container.innerHTML = registrations.map(registration => `
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">${registration.workshopName}</h5>
          <p class="card-text">
            <i class="bi bi-calendar"></i> ${registration.workshopDate}<br>
            <i class="bi bi-person"></i> ${registration.userName}<br>
            <i class="bi bi-envelope"></i> ${registration.userEmail}
          </p>
          <span class="badge bg-success">${registration.status}</span>
          <button class="btn btn-sm btn-outline-primary ms-2">View Details</button>
        </div>
      </div>
    </div>
  `).join('');
}

function renderRequests(requests) {
  const container = document.getElementById('requestItems');
  
  if (requests.length === 0) {
    container.innerHTML = `
      <div class="col-12 text-center py-5">
        <p style="color: #ffffff; font-size: 0.85rem; margin-bottom: 15px; font-weight: 500;">Start your creative journey with us</p>
        <button type="button" class="btn" style="background-color: #d6a45a; border: none; color: #000;" data-bs-toggle="modal" data-bs-target="#newRequestModal">
          Submit Request
        </button>
      </div>
    `;
    return;
  }

  container.innerHTML = requests.map(request => `
    <div class="col-12 mb-3">
      <div class="card">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-md-8">
              <h5 class="card-title">${request.title}</h5>
              <p class="card-text">
                Type: ${request.type === 'sell-art' ? 'Sell Art' : 'Conduct Workshop'}<br>
                Submitted: ${request.submittedDate}
              </p>
            </div>
            <div class="col-md-4 text-end">
              <span class="request-status status-${request.status}">${request.status.toUpperCase()}</span>
              <button class="btn btn-sm btn-outline-primary ms-2">View Details</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  `).join('');
}

function removeFromWishlist(itemId) {
  // Get current wishlist
  let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];
  
  // Remove item
  wishlist = wishlist.filter(item => item.id !== itemId);
  
  // Save to localStorage
  localStorage.setItem('wishlist', JSON.stringify(wishlist));
  
  // Reload display
  loadWishlist();
}

function removeFromCart(itemId) {
  // Get current cart
  let cart = JSON.parse(localStorage.getItem('cart')) || [];
  
  // Remove item
  cart = cart.filter(item => item.id !== itemId);
  
  // Save to localStorage
  localStorage.setItem('cart', JSON.stringify(cart));
  
  // Reload display
  loadCart();
}

function updateQuantity(itemId, change) {
  // Get current cart
  let cart = JSON.parse(localStorage.getItem('cart')) || [];
  
  // Find and update item
  const item = cart.find(item => item.id === itemId);
  if (item) {
    item.quantity += change;
    if (item.quantity <= 0) {
      removeFromCart(itemId);
      return;
    }
    
    // Save to localStorage
    localStorage.setItem('cart', JSON.stringify(cart));
    
    // Reload display
    loadCart();
  }
}

function submitRequest() {
  const type = document.getElementById('requestType').value;
  const title = document.getElementById('requestTitle').value;
  const description = document.getElementById('requestDescription').value;
  
  const requestData = {
    id: Date.now(), // Simple ID generation
    type,
    title,
    description,
    submittedDate: new Date().toISOString().split('T')[0],
    status: 'pending'
  };

  if (type === 'sell-art') {
    requestData.price = document.getElementById('artPrice').value;
  } else if (type === 'conduct-workshop') {
    requestData.preferredDate = document.getElementById('workshopDate').value;
  }

  // Get current requests from localStorage
  let requests = JSON.parse(localStorage.getItem('requests')) || [];
  
  // Add new request
  requests.push(requestData);
  
  // Save to localStorage
  localStorage.setItem('requests', JSON.stringify(requests));
  
  // Close modal and reset form
  const modal = bootstrap.Modal.getInstance(document.getElementById('newRequestModal'));
  modal.hide();
  document.getElementById('requestForm').reset();
  
  // Reload requests
  loadRequests();
}
</script>

<!-- New Request Modal -->
<div class="modal fade" id="newRequestModal" tabindex="-1" aria-labelledby="newRequestModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content" style="background-color: #0a0a0a; border: 1px solid #d6a45a; color: #f5f2ee;">
      <div class="modal-header" style="border-bottom: 1px solid #d6a45a;">
        <h5 class="modal-title" id="newRequestModalLabel" style="color: #d6a45a;">Submit New Request</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="filter: invert(1);"></button>
      </div>
      <div class="modal-body">
        <form id="requestForm">
          <div class="mb-3">
            <label for="requestType" class="form-label" style="color: #f5f2ee;">Request Type</label>
            <select class="form-select" id="requestType" required style="background-color: #1a1a1a; border: 1px solid #d6a45a; color: #f5f2ee;">
              <option value="">Select request type...</option>
              <option value="sell-art">Sell Art</option>
              <option value="conduct-workshop">Conduct Workshop</option>
            </select>
          </div>
          
          <div class="mb-3">
            <label for="browseDropdown" class="form-label" style="color: #f5f2ee;">Browse</label>
            <select class="form-select" id="browseDropdown" onchange="redirectToPage()" style="background-color: #1a1a1a; border: 1px solid #d6a45a; color: #f5f2ee;">
              <option value="">Go to...</option>
              <option value="/gallery">Art Gallery</option>
              <option value="/workshops">Workshops</option>
            </select>
          </div>
          
          <div class="mb-3">
            <label for="requestTitle" class="form-label" style="color: #f5f2ee;">Title</label>
            <input type="text" class="form-control" id="requestTitle" required style="background-color: #1a1a1a; border: 1px solid #d6a45a; color: #f5f2ee;">
          </div>
          <div class="mb-3">
            <label for="requestDescription" class="form-label" style="color: #f5f2ee;">Description</label>
            <textarea class="form-control" id="requestDescription" rows="4" required style="background-color: #1a1a1a; border: 1px solid #d6a45a; color: #f5f2ee;"></textarea>
          </div>
          <div class="mb-3" id="artDetails" style="display: none;">
            <label for="artPrice" class="form-label" style="color: #f5f2ee;">Asking Price ($)</label>
            <input type="number" class="form-control" id="artPrice" min="0" step="0.01" style="background-color: #1a1a1a; border: 1px solid #d6a45a; color: #f5f2ee;">
          </div>
          <div class="mb-3" id="workshopDetails" style="display: none;">
            <label for="workshopDate" class="form-label" style="color: #f5f2ee;">Preferred Date</label>
            <input type="date" class="form-control" id="workshopDate" style="background-color: #1a1a1a; border: 1px solid #d6a45a; color: #f5f2ee;">
          </div>
        </form>
      </div>
      <div class="modal-footer" style="border-top: 1px solid #d6a45a; background-color: #0a0a0a;">
        <button type="button" class="btn" data-bs-dismiss="modal" style="background-color: transparent; border: 1px solid #d6a45a; color: #d6a45a;">Cancel</button>
        <button type="button" class="btn" id="submitRequest" style="background-color: #d6a45a; border: none; color: #000;">Submit Request</button>
      </div>
    </div>
  </div>
</div>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        let currentStep = 1;
        const totalSteps = 5;

        function toggleSidebar() {
            document.getElementById('adminSidebar').classList.toggle('show');
        }
        
        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(e) {
            const sidebar = document.getElementById('adminSidebar');
            const toggle = document.querySelector('.mobile-toggle');
            
            if (window.innerWidth <= 768 && 
                !sidebar.contains(e.target) && 
                !toggle.contains(e.target) && 
                sidebar.classList.contains('show')) {
                sidebar.classList.remove('show');
            }
        });
        
        function viewWorkshopRequest(requestId) {
            // Find request data from global workshopRequests
            const requests = <%- JSON.stringify(workshopRequests || []) %>;
            const request = requests.find(req => req.id == requestId);
            
            if (!request) {
                alert('Request not found');
                return;
            }
            
            const requestDetails = `
                <div class="workshop-request-details">
                    <h6 class="text-warning">Workshop Request #WS${requestId.toString().padStart(3, '0')}</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-warning">Personal Information:</strong>
                            <p class="text-light">
                                Name: ${request.customerName || request.name || ''}<br>
                                Email: ${request.email || ''}<br>
                                Phone: ${request.phone || ''}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <strong class="text-warning">Request Information:</strong>
                            <p class="text-light">
                                Type: ${request.type || 'registration'}<br>
                                Request Date: ${new Date(request.requestDate || request.submittedDate || request.createdAt).toLocaleDateString()}<br>
                                Status: ${request.status}
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-warning">Workshop Details:</strong>
                            <p class="text-light">
                                Workshop: ${request.workshop || request.title || ''}<br>
                                Date: ${request.date ? new Date(request.date).toLocaleDateString() : ''}<br>
                                Duration: ${request.duration ? request.duration + ' hrs' : ''}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <strong class="text-warning">Capacity & Pricing:</strong>
                            <p class="text-light">
                                Participants: ${request.participants || request.capacity || ''}<br>
                                Price: ${request.price ? '₹' + request.price : ''}
                            </p>
                        </div>
                    </div>
                    ${request.description ? `
                    <div class="row">
                        <div class="col-12">
                            <strong class="text-warning">Description:</strong>
                            <p class="text-light">${request.description}</p>
                        </div>
                    </div>
                    ` : ''}
                    ${request.specialRequirements ? `
                    <div class="row">
                        <div class="col-12">
                            <strong class="text-warning">Special Requirements:</strong>
                            <p class="text-light">${request.specialRequirements}</p>
                        </div>
                    </div>
                    ` : ''}
                </div>
            `;
            
            document.getElementById('workshopModalBody').innerHTML = requestDetails;
            new bootstrap.Modal(document.getElementById('workshopModal')).show();
        }
        
        // Step Navigation Functions
        function nextStep() {
            if (validateCurrentStep()) {
                if (currentStep < totalSteps) {
                    // Mark current step as completed
                    document.querySelector(`[data-step="${currentStep}"]`).classList.add('completed');
                    document.querySelector(`[data-step="${currentStep}"]`).classList.remove('active');
                    
                    // Update step lines
                    const stepLines = document.querySelectorAll('.step-line');
                    if (stepLines[currentStep - 1]) {
                        stepLines[currentStep - 1].classList.add('completed');
                    }
                    
                    // Hide current step
                    document.getElementById(`step${currentStep}`).classList.remove('active');
                    
                    // Move to next step
                    currentStep++;
                    
                    // Show next step
                    document.getElementById(`step${currentStep}`).classList.add('active');
                    document.querySelector(`[data-step="${currentStep}"]`).classList.add('active');
                    
                    updateStepButtons();
                }
            }
        }
        
        function previousStep() {
            if (currentStep > 1) {
                // Remove completed status from current step
                document.querySelector(`[data-step="${currentStep}"]`).classList.remove('active');
                
                // Hide current step
                document.getElementById(`step${currentStep}`).classList.remove('active');
                
                // Move to previous step
                currentStep--;
                
                // Show previous step
                document.getElementById(`step${currentStep}`).classList.add('active');
                document.querySelector(`[data-step="${currentStep}"]`).classList.add('active');
                document.querySelector(`[data-step="${currentStep}"]`).classList.remove('completed');
                
                // Update step lines
                const stepLines = document.querySelectorAll('.step-line');
                if (stepLines[currentStep - 1]) {
                    stepLines[currentStep - 1].classList.remove('completed');
                }
                
                updateStepButtons();
            }
        }
        
        function updateStepButtons() {
            const prevBtn = document.getElementById('prevStepBtn');
            const nextBtn = document.getElementById('nextStepBtn');
            const saveDraftBtn = document.getElementById('saveDraftBtn');
            const createBtn = document.getElementById('createBtn');
            
            // Show/hide previous button
            prevBtn.style.display = currentStep > 1 ? 'inline-block' : 'none';
            
            // Show/hide next button
            nextBtn.style.display = currentStep < totalSteps ? 'inline-block' : 'none';
            
            // Show save draft and create buttons on last step
            saveDraftBtn.style.display = currentStep === totalSteps ? 'inline-block' : 'none';
            createBtn.style.display = currentStep === totalSteps ? 'inline-block' : 'none';
        }
        
        function validateCurrentStep() {
            const currentStepElement = document.getElementById(`step${currentStep}`);
            const requiredFields = currentStepElement.querySelectorAll('[required]');
            
            for (let field of requiredFields) {
                if (!field.value.trim()) {
                    field.focus();
                    field.classList.add('is-invalid');
                    
                    // Show error message
                    showStepError(`Please fill in all required fields in this step.`);
                    return false;
                } else {
                    field.classList.remove('is-invalid');
                }
            }
            
            // Additional validation for specific steps
            if (currentStep === 2) {
                return validateScheduleStep();
            }
            
            return true;
        }
        
        function validateScheduleStep() {
            const startTime = document.getElementById('workshopStartTime').value;
            const endTime = document.getElementById('workshopEndTime').value;
            
            if (startTime && endTime) {
                const start = new Date(`2000-01-01T${startTime}`);
                const end = new Date(`2000-01-01T${endTime}`);
                
                if (end <= start) {
                    showStepError('End time must be after start time.');
                    return false;
                }
            }
            
            return true;
        }
        
        function showStepError(message) {
            // Remove existing error alerts
            const existingAlert = document.querySelector('.step-error-alert');
            if (existingAlert) {
                existingAlert.remove();
            }
            
            // Create new error alert
            const alert = document.createElement('div');
            alert.className = 'alert alert-danger step-error-alert mt-3';
            alert.innerHTML = `<i class="fas fa-exclamation-triangle me-2"></i>${message}`;
            
            // Insert at the top of current step
            const currentStepElement = document.getElementById(`step${currentStep}`);
            currentStepElement.insertBefore(alert, currentStepElement.firstChild);
            
            // Auto-remove after 5 seconds
            setTimeout(() => {
                if (alert.parentNode) {
                    alert.remove();
                }
            }, 5000);
        }
        
        // Workshop Creation Functions
        function calculateDuration() {
            const startTime = document.getElementById('workshopStartTime').value;
            const endTime = document.getElementById('workshopEndTime').value;
            
            if (startTime && endTime) {
                const start = new Date(`2000-01-01T${startTime}`);
                const end = new Date(`2000-01-01T${endTime}`);
                const diffMs = end - start;
                const diffHours = diffMs / (1000 * 60 * 60);
                
                if (diffHours > 0) {
                    document.getElementById('workshopDuration').value = diffHours;
                }
            }
        }
        
        // Add event listeners for enhanced functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Time calculation
            document.getElementById('workshopStartTime').addEventListener('change', calculateDuration);
            document.getElementById('workshopEndTime').addEventListener('change', calculateDuration);
            
            // Frequency change handler
            document.getElementById('workshopFrequency').addEventListener('change', function() {
                const recurringOptions = document.getElementById('recurringOptions');
                if (this.value !== 'one-time') {
                    recurringOptions.style.display = 'block';
                } else {
                    recurringOptions.style.display = 'none';
                }
            });
            
            // Cancellation policy change handler
            document.getElementById('cancellationPolicy').addEventListener('change', function() {
                const customPolicyText = document.getElementById('customPolicyText');
                if (this.value === 'custom') {
                    customPolicyText.style.display = 'block';
                } else {
                    customPolicyText.style.display = 'none';
                }
            });
            
            // Auto-set registration deadline based on workshop date
            document.getElementById('workshopDate').addEventListener('change', function() {
                const workshopDate = new Date(this.value);
                const registrationDeadline = new Date(workshopDate);
                registrationDeadline.setDate(registrationDeadline.getDate() - 3); // 3 days before
                
                document.getElementById('registrationDeadline').value = registrationDeadline.toISOString().split('T')[0];
            });
            
            // Auto-set early bird deadline
            document.getElementById('workshopDate').addEventListener('change', function() {
                const workshopDate = new Date(this.value);
                const earlyBirdDeadline = new Date(workshopDate);
                earlyBirdDeadline.setDate(earlyBirdDeadline.getDate() - 7); // 1 week before
                
                document.getElementById('earlyBirdDeadline').value = earlyBirdDeadline.toISOString().split('T')[0];
            });
            
            // Form validation styling
            const form = document.getElementById('createWorkshopForm');
            form.addEventListener('input', function(e) {
                if (e.target.hasAttribute('required')) {
                    if (e.target.value.trim()) {
                        e.target.classList.remove('is-invalid');
                        e.target.classList.add('is-valid');
                    } else {
                        e.target.classList.remove('is-valid');
                    }
                }
            });
        });
        
        function saveWorkshopDraft() {
            const formData = collectWorkshopFormData();
            formData.status = 'draft';
            
            // Send data to backend
            fetch('/admin/workshops/draft', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showSuccessMessage('Workshop saved as draft successfully!');
                    setTimeout(() => {
                        bootstrap.Modal.getInstance(document.getElementById('createWorkshopModal')).hide();
                        resetWorkshopForm();
                    }, 1500);
                } else {
                    showErrorMessage(data.message || 'Failed to save workshop draft');
                }
            })
            .catch(error => {
                console.error('Error saving workshop draft:', error);
                showErrorMessage('Failed to save workshop draft');
            });
        }
        
        function createWorkshop() {
            if (!validateAllSteps()) {
                return;
            }
            
            const formData = collectWorkshopFormData();
            
            // Send data to backend
            fetch('/admin/workshops/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showSuccessMessage('Workshop created successfully!');
                    setTimeout(() => {
                        bootstrap.Modal.getInstance(document.getElementById('createWorkshopModal')).hide();
                        resetWorkshopForm();
                        // Refresh the page to show new workshop
                        location.reload();
                    }, 1500);
                } else {
                    showErrorMessage(data.message || 'Failed to create workshop');
                }
            })
            .catch(error => {
                console.error('Error creating workshop:', error);
                showErrorMessage('Failed to create workshop');
            });
        }
        
        function validateAllSteps() {
            // Validate all required fields across all steps
            const form = document.getElementById('createWorkshopForm');
            const requiredFields = form.querySelectorAll('[required]');
            
            for (let field of requiredFields) {
                if (!field.value.trim()) {
                    // Find which step this field belongs to and navigate there
                    const stepElement = field.closest('.workshop-step');
                    if (stepElement) {
                        const stepNumber = parseInt(stepElement.id.replace('step', ''));
                        navigateToStep(stepNumber);
                        field.focus();
                        showStepError(`Please fill in all required fields.`);
                        return false;
                    }
                }
            }
            
            return true;
        }
        
        function navigateToStep(stepNumber) {
            // Hide current step
            document.getElementById(`step${currentStep}`).classList.remove('active');
            document.querySelector(`[data-step="${currentStep}"]`).classList.remove('active');
            
            // Show target step
            currentStep = stepNumber;
            document.getElementById(`step${currentStep}`).classList.add('active');
            document.querySelector(`[data-step="${currentStep}"]`).classList.add('active');
            
            updateStepButtons();
        }
        
        function showSuccessMessage(message) {
            const alert = document.createElement('div');
            alert.className = 'alert alert-success position-fixed';
            alert.style.cssText = 'top: 20px; right: 20px; z-index: 10000; min-width: 300px;';
            alert.innerHTML = `<i class="fas fa-check-circle me-2"></i>${message}`;
            
            document.body.appendChild(alert);
            
            setTimeout(() => {
                if (alert.parentNode) {
                    alert.remove();
                }
            }, 3000);
        }
        
        function showErrorMessage(message) {
            const alert = document.createElement('div');
            alert.className = 'alert alert-danger position-fixed';
            alert.style.cssText = 'top: 20px; right: 20px; z-index: 10000; min-width: 300px;';
            alert.innerHTML = `<i class="fas fa-exclamation-triangle me-2"></i>${message}`;
            
            document.body.appendChild(alert);
            
            setTimeout(() => {
                if (alert.parentNode) {
                    alert.remove();
                }
            }, 5000);
        }
        
        function resetWorkshopForm() {
            // Reset form
            document.getElementById('createWorkshopForm').reset();
            
            // Reset steps
            currentStep = 1;
            
            // Reset step indicators
            document.querySelectorAll('.step-item').forEach((item, index) => {
                item.classList.remove('active', 'completed');
                if (index === 0) {
                    item.classList.add('active');
                }
            });
            
            // Reset step lines
            document.querySelectorAll('.step-line').forEach(line => {
                line.classList.remove('completed');
            });
            
            // Show first step
            document.querySelectorAll('.workshop-step').forEach((step, index) => {
                step.classList.remove('active');
                if (index === 0) {
                    step.classList.add('active');
                }
            });
            
            // Reset buttons
            updateStepButtons();
            
            // Hide conditional sections
            document.getElementById('recurringOptions').style.display = 'none';
            document.getElementById('customPolicyText').style.display = 'none';
        }
        
        function collectWorkshopFormData() {
            return {
                // Basic Information
                title: document.getElementById('workshopTitle').value,
                category: document.getElementById('workshopCategory').value,
                description: document.getElementById('workshopDescription').value,
                objectives: document.getElementById('workshopObjectives').value,
                prerequisites: document.getElementById('workshopPrerequisites').value,
                location: document.getElementById('workshopLocation').value,
                language: document.getElementById('workshopLanguage').value,
                
                // Schedule & Duration
                date: document.getElementById('workshopDate').value,
                startTime: document.getElementById('workshopStartTime').value,
                endTime: document.getElementById('workshopEndTime').value,
                duration: document.getElementById('workshopDuration').value,
                frequency: document.getElementById('workshopFrequency').value,
                recurringEndDate: document.getElementById('recurringEndDate').value,
                maxOccurrences: document.getElementById('maxOccurrences').value,
                skipDates: document.getElementById('skipDates').value,
                setupTime: document.getElementById('setupTime').value,
                cleanupTime: document.getElementById('cleanupTime').value,
                
                // Capacity & Pricing
                maxParticipants: document.getElementById('maxParticipants').value,
                minParticipants: document.getElementById('minParticipants').value,
                price: document.getElementById('workshopPrice').value,
                earlyBirdPrice: document.getElementById('earlyBirdPrice').value,
                earlyBirdDeadline: document.getElementById('earlyBirdDeadline').value,
                groupDiscount: document.getElementById('groupDiscount').value,
                memberDiscount: document.getElementById('memberDiscount').value,
                allowWaitlist: document.getElementById('allowWaitlist').checked,
                
                // Instructor & Resources
                instructorName: document.getElementById('instructorName').value,
                instructorEmail: document.getElementById('instructorEmail').value,
                instructorBio: document.getElementById('instructorBio').value,
                skillLevel: document.getElementById('skillLevel').value,
                ageRestriction: document.getElementById('ageRestriction').value,
                materialsProvided: document.getElementById('materialsProvided').value,
                materialsToBring: document.getElementById('materialsToBring').value,
                
                // Features
                includeRefreshments: document.getElementById('includeRefreshments').checked,
                certificateProvided: document.getElementById('certificateProvided').checked,
                takeHomeKit: document.getElementById('takeHomeKit').checked,
                photographyAllowed: document.getElementById('photographyAllowed').checked,
                recordingAllowed: document.getElementById('recordingAllowed').checked,
                wheelchairAccessible: document.getElementById('wheelchairAccessible').checked,
                
                // Registration & Policies
                registrationDeadline: document.getElementById('registrationDeadline').value,
                cancellationPolicy: document.getElementById('cancellationPolicy').value,
                customCancellationPolicy: document.getElementById('customCancellationPolicy').value,
                specialNotes: document.getElementById('specialNotes').value,
                contactPerson: document.getElementById('contactPerson').value,
                contactPhone: document.getElementById('contactPhone').value,
                sendConfirmationEmail: document.getElementById('sendConfirmationEmail').checked,
                sendReminderEmail: document.getElementById('sendReminderEmail').checked,
                status: document.getElementById('workshopStatus').value,
                
                // Metadata
                createdAt: new Date().toISOString(),
                createdBy: 'admin' // Replace with actual admin user
            };
        }
    </script>

        // Step Navigation Functions
        function nextStep() {
            if (validateCurrentStep()) {
                if (currentStep < totalSteps) {
                    // Mark current step as completed
                    document.querySelector(`[data-step="${currentStep}"]`).classList.add('completed');
                    document.querySelector(`[data-step="${currentStep}"]`).classList.remove('active');
                    
                    // Update step lines
                    const stepLines = document.querySelectorAll('.step-line');
                    if (stepLines[currentStep - 1]) {
                        stepLines[currentStep - 1].classList.add('completed');
                    }
                    
                    // Hide current step
                    document.getElementById(`step${currentStep}`).classList.remove('active');
                    
                    // Move to next step
                    currentStep++;
                    
                    // Show next step
                    document.getElementById(`step${currentStep}`).classList.add('active');
                    document.querySelector(`[data-step="${currentStep}"]`).classList.add('active');
                    
                    updateStepButtons();
                }
            }
        }
        
        function previousStep() {
            if (currentStep > 1) {
                // Remove completed status from current step
                document.querySelector(`[data-step="${currentStep}"]`).classList.remove('active');
                
                // Hide current step
                document.getElementById(`step${currentStep}`).classList.remove('active');
                
                // Move to previous step
                currentStep--;
                
                // Show previous step
                document.getElementById(`step${currentStep}`).classList.add('active');
                document.querySelector(`[data-step="${currentStep}"]`).classList.add('active');
                document.querySelector(`[data-step="${currentStep}"]`).classList.remove('completed');
                
                // Update step lines
                const stepLines = document.querySelectorAll('.step-line');
                if (stepLines[currentStep - 1]) {
                    stepLines[currentStep - 1].classList.remove('completed');
                }
                
                updateStepButtons();
            }
        }
        
        function updateStepButtons() {
            const prevBtn = document.getElementById('prevStepBtn');
            const nextBtn = document.getElementById('nextStepBtn');
            const saveDraftBtn = document.getElementById('saveDraftBtn');
            const createBtn = document.getElementById('createBtn');
            
            // Show/hide previous button
            prevBtn.style.display = currentStep > 1 ? 'inline-block' : 'none';
            
            // Show/hide next button
            nextBtn.style.display = currentStep < totalSteps ? 'inline-block' : 'none';
            
            // Show save draft and create buttons on last step
            saveDraftBtn.style.display = currentStep === totalSteps ? 'inline-block' : 'none';
            createBtn.style.display = currentStep === totalSteps ? 'inline-block' : 'none';
        }
        
        function validateCurrentStep() {
            const currentStepElement = document.getElementById(`step${currentStep}`);
            const requiredFields = currentStepElement.querySelectorAll('[required]');
            
            for (let field of requiredFields) {
                if (!field.value.trim()) {
                    field.focus();
                    field.classList.add('is-invalid');
                    
                    // Show error message
                    showStepError(`Please fill in all required fields in this step.`);
                    return false;
                } else {
                    field.classList.remove('is-invalid');
                }
            }
            
            // Additional validation for specific steps
            if (currentStep === 2) {
                return validateScheduleStep();
            }
            
            return true;
        }
        
        function validateScheduleStep() {
            const startTime = document.getElementById('workshopStartTime').value;
            const endTime = document.getElementById('workshopEndTime').value;
            
            if (startTime && endTime) {
                const start = new Date(`2000-01-01T${startTime}`);
                const end = new Date(`2000-01-01T${endTime}`);
                
                if (end <= start) {
                    showStepError('End time must be after start time.');
                    return false;
                }
            }
            
            return true;
        }
        
        function showStepError(message) {
            // Remove existing error alerts
            const existingAlert = document.querySelector('.step-error-alert');
            if (existingAlert) {
                existingAlert.remove();
            }
            
            // Create new error alert
            const alert = document.createElement('div');
            alert.className = 'alert alert-danger step-error-alert mt-3';
            alert.innerHTML = `<i class="fas fa-exclamation-triangle me-2"></i>${message}`;
            
            // Insert at the top of current step
            const currentStepElement = document.getElementById(`step${currentStep}`);
            currentStepElement.insertBefore(alert, currentStepElement.firstChild);
            
            // Auto-remove after 5 seconds
            setTimeout(() => {
                if (alert.parentNode) {
                    alert.remove();
                }
            }, 5000);
        }
        
        // Workshop Creation Functions
        function calculateDuration() {
            const startTime = document.getElementById('workshopStartTime').value;
            const endTime = document.getElementById('workshopEndTime').value;
            
            if (startTime && endTime) {
                const start = new Date(`2000-01-01T${startTime}`);
                const end = new Date(`2000-01-01T${endTime}`);
                const diffMs = end - start;
                const diffHours = diffMs / (1000 * 60 * 60);
                
                if (diffHours > 0) {
                    document.getElementById('workshopDuration').value = diffHours;
                }
            }
        }
        
        // Add event listeners for enhanced functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Time calculation
            document.getElementById('workshopStartTime').addEventListener('change', calculateDuration);
            document.getElementById('workshopEndTime').addEventListener('change', calculateDuration);
            
            // Frequency change handler
            document.getElementById('workshopFrequency').addEventListener('change', function() {
                const recurringOptions = document.getElementById('recurringOptions');
                if (this.value !== 'one-time') {
                    recurringOptions.style.display = 'block';
                } else {
                    recurringOptions.style.display = 'none';
                }
            });
            
            // Cancellation policy change handler
            document.getElementById('cancellationPolicy').addEventListener('change', function() {
                const customPolicyText = document.getElementById('customPolicyText');
                if (this.value === 'custom') {
                    customPolicyText.style.display = 'block';
                } else {
                    customPolicyText.style.display = 'none';
                }
            });
            
            // Auto-set registration deadline based on workshop date
            document.getElementById('workshopDate').addEventListener('change', function() {
                const workshopDate = new Date(this.value);
                const registrationDeadline = new Date(workshopDate);
                registrationDeadline.setDate(registrationDeadline.getDate() - 3); // 3 days before
                
                document.getElementById('registrationDeadline').value = registrationDeadline.toISOString().split('T')[0];
            });
            
            // Auto-set early bird deadline
            document.getElementById('workshopDate').addEventListener('change', function() {
                const workshopDate = new Date(this.value);
                const earlyBirdDeadline = new Date(workshopDate);
                earlyBirdDeadline.setDate(earlyBirdDeadline.getDate() - 7); // 1 week before
                
                document.getElementById('earlyBirdDeadline').value = earlyBirdDeadline.toISOString().split('T')[0];
            });
            
            // Form validation styling
            const form = document.getElementById('createWorkshopForm');
            form.addEventListener('input', function(e) {
                if (e.target.hasAttribute('required')) {
                    if (e.target.value.trim()) {
                        e.target.classList.remove('is-invalid');
                        e.target.classList.add('is-valid');
                    } else {
                        e.target.classList.remove('is-valid');
                    }
                }
            });
        });
        
        function saveWorkshopDraft() {
            const formData = collectWorkshopFormData();
            formData.status = 'draft';
            
            // Send data to backend
            fetch('/admin/workshops/draft', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showSuccessMessage('Workshop saved as draft successfully!');
                    setTimeout(() => {
                        bootstrap.Modal.getInstance(document.getElementById('createWorkshopModal')).hide();
                        resetWorkshopForm();
                    }, 1500);
                } else {
                    showErrorMessage(data.message || 'Failed to save workshop draft');
                }
            })
            .catch(error => {
                console.error('Error saving workshop draft:', error);
                showErrorMessage('Failed to save workshop draft');
            });
        }
        
        function createWorkshop() {
            if (!validateAllSteps()) {
                return;
            }
            
            const formData = collectWorkshopFormData();
            
            // Send data to backend
            fetch('/admin/workshops/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showSuccessMessage('Workshop created successfully!');
                    setTimeout(() => {
                        bootstrap.Modal.getInstance(document.getElementById('createWorkshopModal')).hide();
                        resetWorkshopForm();
                        // Refresh the page to show new workshop
                        location.reload();
                    }, 1500);
                } else {
                    showErrorMessage(data.message || 'Failed to create workshop');
                }
            })
            .catch(error => {
                console.error('Error creating workshop:', error);
                showErrorMessage('Failed to create workshop');
            });
        }
        
        function validateAllSteps() {
            // Validate all required fields across all steps
            const form = document.getElementById('createWorkshopForm');
            const requiredFields = form.querySelectorAll('[required]');
            
            for (let field of requiredFields) {
                if (!field.value.trim()) {
                    // Find which step this field belongs to and navigate there
                    const stepElement = field.closest('.workshop-step');
                    if (stepElement) {
                        const stepNumber = parseInt(stepElement.id.replace('step', ''));
                        navigateToStep(stepNumber);
                        field.focus();
                        showStepError(`Please fill in all required fields.`);
                        return false;
                    }
                }
            }
            
            return true;
        }
        
        function navigateToStep(stepNumber) {
            // Hide current step
            document.getElementById(`step${currentStep}`).classList.remove('active');
            document.querySelector(`[data-step="${currentStep}"]`).classList.remove('active');
            
            // Show target step
            currentStep = stepNumber;
            document.getElementById(`step${currentStep}`).classList.add('active');
            document.querySelector(`[data-step="${currentStep}"]`).classList.add('active');
            
            updateStepButtons();
        }
        
        function showSuccessMessage(message) {
            const alert = document.createElement('div');
            alert.className = 'alert alert-success position-fixed';
            alert.style.cssText = 'top: 20px; right: 20px; z-index: 10000; min-width: 300px;';
            alert.innerHTML = `<i class="fas fa-check-circle me-2"></i>${message}`;
            
            document.body.appendChild(alert);
            
            setTimeout(() => {
                if (alert.parentNode) {
                    alert.remove();
                }
            }, 3000);
        }
        
        function showErrorMessage(message) {
            const alert = document.createElement('div');
            alert.className = 'alert alert-danger position-fixed';
            alert.style.cssText = 'top: 20px; right: 20px; z-index: 10000; min-width: 300px;';
            alert.innerHTML = `<i class="fas fa-exclamation-triangle me-2"></i>${message}`;
            
            document.body.appendChild(alert);
            
            setTimeout(() => {
                if (alert.parentNode) {
                    alert.remove();
                }
            }, 5000);
        }
        
        function resetWorkshopForm() {
            // Reset form
            document.getElementById('createWorkshopForm').reset();
            
            // Reset steps
            currentStep = 1;
            
            // Reset step indicators
            document.querySelectorAll('.step-item').forEach((item, index) => {
                item.classList.remove('active', 'completed');
                if (index === 0) {
                    item.classList.add('active');
                }
            });
            
            // Reset step lines
            document.querySelectorAll('.step-line').forEach(line => {
                line.classList.remove('completed');
            });
            
            // Show first step
            document.querySelectorAll('.workshop-step').forEach((step, index) => {
                step.classList.remove('active');
                if (index === 0) {
                    step.classList.add('active');
                }
            });
            
            // Reset buttons
            updateStepButtons();
            
            // Hide conditional sections
            document.getElementById('recurringOptions').style.display = 'none';
            document.getElementById('customPolicyText').style.display = 'none';
        }
        

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Franchise Applications - Admin Dashboard</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        /* Complete CSS Reset for Admin */
        * {
            margin: 0 !important;
            padding: 0 !important;
            box-sizing: border-box !important;
        }
        
        html, body {
            margin: 0 !important;
            padding: 0 !important;
            font-family: 'Inter', sans-serif !important;
            background: #000 !important;
            color: #fff !important;
            overflow-x: hidden !important;
            height: 100% !important;
        }
        
        /* Admin Layout */
        .admin-wrapper {
            display: flex !important;
            min-height: 100vh !important;
            background: #000 !important;
        }
        
        /* Sidebar */
        .admin-sidebar {
            width: 250px !important;
            background: #111 !important;
            border-right: 2px solid #d6a45a !important;
            position: fixed !important;
            height: 100vh !important;
            overflow-y: auto !important;
            z-index: 9999 !important;
        }
        
        .admin-logo {
            padding: 2rem 1.5rem !important;
            text-align: center !important;
            border-bottom: 1px solid #333 !important;
        }
        
        .admin-logo h4 {
            color: #d6a45a !important;
            margin: 0 !important;
            font-weight: 700 !important;
        }
        
        .admin-nav {
            padding: 1rem 0 !important;
        }
        
        .admin-nav a {
            display: block !important;
            padding: 1rem 1.5rem !important;
            color: #fff !important;
            text-decoration: none !important;
            transition: all 0.3s ease !important;
        }
        
        .admin-nav a:hover {
            background: rgba(214, 164, 90, 0.1) !important;
            color: #d6a45a !important;
        }
        
        .admin-nav a.active {
            background: #d6a45a !important;
            color: #000 !important;
        }
        
        .admin-nav i {
            width: 20px !important;
            margin-right: 10px !important;
        }
        
        /* Main Content */
        .admin-main {
            flex: 1 !important;
            margin-left: 250px !important;
            background: #000 !important;
        }
        
        .admin-header {
            background: #1a1a1a !important;
            padding: 1rem 2rem !important;
            border-bottom: 1px solid #333 !important;
            position: sticky !important;
            top: 0 !important;
            z-index: 100 !important;
        }
        
        .admin-header h2 {
            color: #d6a45a !important;
            margin: 0 !important;
        }
        
        .admin-content {
            padding: 2rem !important;
        }
        
        /* Cards */
        .admin-card {
            background: #1a1a1a !important;
            border: 1px solid #333 !important;
            border-radius: 8px !important;
            padding: 1.5rem !important;
            margin-bottom: 1rem !important;
            transition: transform 0.3s ease !important;
        }
        
        .admin-card:hover {
            transform: translateY(-2px) !important;
            border-color: #d6a45a !important;
        }
        
        .admin-card h3 {
            color: #d6a45a !important;
            margin-bottom: 1rem !important;
        }
        
        /* Tables */
        .admin-table {
            background: #1a1a1a !important;
            border: 1px solid #333 !important;
            border-radius: 8px !important;
            overflow: hidden !important;
        }
        
        .admin-table table {
            width: 100% !important;
            margin: 0 !important;
        }
        
        .admin-table th {
            background: #333 !important;
            color: #d6a45a !important;
            padding: 1rem !important;
            border: none !important;
        }
        
        .admin-table td {
            padding: 1rem !important;
            border-bottom: 1px solid #333 !important;
            color: #fff !important;
        }
        
        .admin-table tr:hover {
            background: rgba(214, 164, 90, 0.1) !important;
        }
        
        /* Buttons */
        .btn-primary {
            background: #d6a45a !important;
            border-color: #d6a45a !important;
            color: #000 !important;
        }
        
        .btn-primary:hover {
            background: #e3b873 !important;
            border-color: #e3b873 !important;
            color: #000 !important;
        }
        
        .btn-outline-primary {
            color: #d6a45a !important;
            border-color: #d6a45a !important;
        }
        
        .btn-outline-primary:hover {
            background: #d6a45a !important;
            color: #000 !important;
        }
        
        /* Form Controls */
        .form-control, .form-select {
            background: #333 !important;
            border: 1px solid #555 !important;
            color: #fff !important;
        }
        
        .form-control:focus, .form-select:focus {
            background: #333 !important;
            border-color: #d6a45a !important;
            color: #fff !important;
            box-shadow: 0 0 0 0.2rem rgba(214, 164, 90, 0.25) !important;
        }
        
        /* Badges */
        .badge {
            padding: 0.5rem 0.75rem !important;
        }
        
        .badge.bg-warning {
            background: #f39c12 !important;
            color: #000 !important;
        }
        
        .badge.bg-success {
            background: #27ae60 !important;
        }
        
        .badge.bg-info {
            background: #d6a45a !important;
            color: #000 !important;
        }
        
        .badge.bg-primary {
            background: #d6a45a !important;
            color: #000 !important;
        }
        
        .badge.bg-danger {
            background: #e74c3c !important;
            color: #fff !important;
        }
        
        /* Mobile */
        @media (max-width: 768px) {
            .admin-sidebar {
                transform: translateX(-100%) !important;
                z-index: 10000 !important;
            }
            
            .admin-sidebar.show {
                transform: translateX(0) !important;
            }
            
            .admin-main {
                margin-left: 0 !important;
            }
        }
        
        .mobile-toggle {
            display: none !important;
            background: #d6a45a !important;
            border: none !important;
            color: #000 !important;
            padding: 0.5rem !important;
            border-radius: 4px !important;
        }
        
        @media (max-width: 768px) {
            .mobile-toggle {
                display: inline-block !important;
            }
        }
    </style>
</head>
<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <nav class="admin-sidebar" id="adminSidebar">
            <div class="admin-logo">
                <h4><i class="fas fa-coffee me-2"></i>Rabuste Admin</h4>
            </div>
            
            <div class="admin-nav">
                <a href="/admin">
                    <i class="fas fa-tachometer-alt"></i>Dashboard
                </a>
                <a href="/admin/cart-requests">
                    <i class="fas fa-shopping-cart"></i>Cart Requests
                </a>
                <a href="/admin/art-requests">
                    <i class="fas fa-palette"></i>Art Requests
                </a>
                <a href="/admin/workshop-requests">
                    <i class="fas fa-calendar-alt"></i>Workshop Requests
                </a>
                <a href="/admin/franchise-requests" class="active">
                    <i class="fas fa-handshake"></i>Franchise Applications
                </a>
                
                <hr style="border-color: #333; margin: 1rem 1.5rem;">
                
                <a href="/" target="_blank">
                    <i class="fas fa-external-link-alt"></i>View Website
                </a>
                <a href="/logout">
                    <i class="fas fa-sign-out-alt"></i>Logout
                </a>
            </div>
        </nav>
        
        <!-- Main Content -->
        <main class="admin-main">
            <div class="admin-header d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <button class="mobile-toggle me-3" onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h2>Franchise Applications</h2>
                </div>
                <div>
                    <span style="color: #ccc;">Welcome, Admin</span>
                </div>
            </div>
            
            <div class="admin-content">
                <!-- Franchise Applications Content -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <p style="color: #ccc;">Manage franchise applications and inquiries</p>
                    </div>
                </div>

                <!-- Filter and Search -->
                <div class="admin-card mb-4">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <select class="form-select" id="statusFilter">
                                <option value="">All Status</option>
                                <option value="pending">Pending</option>
                                <option value="approved">Approved</option>
                                <option value="rejected">Rejected</option>
                                <option value="contacted">Contacted</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="investmentFilter">
                                <option value="">All Investment Ranges</option>
                                <option value="₹50K - ₹75K">₹50K - ₹75K</option>
                                <option value="₹75K - ₹100K">₹75K - ₹100K</option>
                                <option value="₹100K - ₹150K">₹100K - ₹150K</option>
                                <option value="₹150K - ₹200K">₹150K - ₹200K</option>
                                <option value="₹200K+">₹200K+</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="cityFilter" placeholder="Filter by city">
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="searchFilter" placeholder="Search by name or email">
                        </div>
                    </div>
                </div>

                <!-- Franchise Applications Table -->
                <div class="admin-card mb-4">
                    <h3 class="mb-3"><i class="fas fa-handshake me-2"></i>Franchise Applications</h3>
                    <div class="admin-table">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th>Application ID</th>
                                    <th>Applicant</th>
                                    <th>City</th>
                                    <th>Investment Range</th>
                                    <th>Timeline</th>
                                    <th>Experience</th>
                                    <th>Submitted</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (franchiseApplications && franchiseApplications.length > 0) { %>
                                    <% franchiseApplications.forEach(application => { %>
                                    <tr>
                                        <td>#FA<%= application.id.toString().padStart(3, '0') %></td>
                                        <td>
                                            <strong><%= application.fullName %></strong><br>
                                            <small style="color: #ccc;"><%= application.email %></small><br>
                                            <small style="color: #ccc;"><%= application.phoneNumber %></small>
                                        </td>
                                        <td><%= application.city %></td>
                                        <td>
                                            <span class="badge bg-info"><%= application.investmentRange %></span>
                                        </td>
                                        <td><%= application.expectedTimeline %></td>
                                        <td>
                                            <% if (application.businessExperience) { %>
                                                <%= application.businessExperience.substring(0, 50) %>...
                                            <% } else { %>
                                                <span style="color: #ccc;">Not provided</span>
                                            <% } %>
                                        </td>
                                        <td><%= new Date(application.submittedDate).toLocaleDateString() %></td>
                                        <td>
                                            <% if (application.status === 'pending') { %>
                                                <span class="badge bg-warning">Pending Review</span>
                                            <% } else if (application.status === 'approved') { %>
                                                <span class="badge bg-success">Approved</span>
                                            <% } else if (application.status === 'rejected') { %>
                                                <span class="badge bg-danger">Rejected</span>
                                            <% } else if (application.status === 'contacted') { %>
                                                <span class="badge bg-primary">Contacted</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="viewFranchiseApplication(<%= application.id %>)">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <% if (application.status === 'pending') { %>
                                                <form method="POST" action="/admin/franchise-applications/<%= application.id %>/update" class="d-inline">
                                                    <input type="hidden" name="status" value="approved">
                                                    <button type="submit" class="btn btn-sm btn-success" title="Approve Application">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                                <form method="POST" action="/admin/franchise-applications/<%= application.id %>/update" class="d-inline">
                                                    <input type="hidden" name="status" value="contacted">
                                                    <button type="submit" class="btn btn-sm btn-primary" title="Mark as Contacted">
                                                        <i class="fas fa-phone"></i>
                                                    </button>
                                                </form>
                                                <form method="POST" action="/admin/franchise-applications/<%= application.id %>/update" class="d-inline">
                                                    <input type="hidden" name="status" value="rejected">
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Reject Application">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </form>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="9" class="text-center" style="color: #ccc; font-style: italic; padding: 2rem;">
                                            No franchise applications submitted yet.
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
    
    <!-- Franchise Application Details Modal -->
    <div class="modal fade" id="franchiseModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title text-warning">Franchise Application Details</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="franchiseModalBody">
                    <!-- Franchise application details will be loaded here -->
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function toggleSidebar() {
            document.getElementById('adminSidebar').classList.toggle('show');
        }
        
        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(e) {
            const sidebar = document.getElementById('adminSidebar');
            const toggle = document.querySelector('.mobile-toggle');
            
            if (window.innerWidth <= 768 && 
                !sidebar.contains(e.target) && 
                !toggle.contains(e.target) && 
                sidebar.classList.contains('show')) {
                sidebar.classList.remove('show');
            }
        });
        
        function viewFranchiseApplication(applicationId) {
            // Find the application data from the global franchiseApplications
            const applications = <%-JSON.stringify(franchiseApplications || [])%>;
            const application = applications.find(app => app.id == applicationId);
            
            if (!application) {
                alert('Application not found');
                return;
            }
            
            const applicationDetails = `
                <div class="franchise-application-details">
                    <h6 class="text-warning">Franchise Application #FA${applicationId.toString().padStart(3, '0')}</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-warning">Personal Information:</strong>
                            <p class="text-light">
                                Name: ${application.fullName}<br>
                                Email: ${application.email}<br>
                                Phone: ${application.phoneNumber}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <strong class="text-warning">Application Details:</strong>
                            <p class="text-light">
                                Submitted: ${new Date(application.submittedDate).toLocaleDateString()}<br>
                                Status: ${application.status}<br>
                                Type: ${application.type}
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-warning">Business Information:</strong>
                            <p class="text-light">
                                City: ${application.city}<br>
                                Investment Range: ${application.investmentRange}<br>
                                Expected Timeline: ${application.expectedTimeline}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <strong class="text-warning">Experience:</strong>
                            <p class="text-light">
                                ${application.businessExperience || 'Not provided'}
                            </p>
                        </div>
                    </div>
                </div>
            `;
            
            document.getElementById('franchiseModalBody').innerHTML = applicationDetails;
            new bootstrap.Modal(document.getElementById('franchiseModal')).show();
        }
        
        // Filter functionality
        document.getElementById('statusFilter').addEventListener('change', filterApplications);
        document.getElementById('investmentFilter').addEventListener('change', filterApplications);
        document.getElementById('cityFilter').addEventListener('input', filterApplications);
        document.getElementById('searchFilter').addEventListener('input', filterApplications);
        
        function filterApplications() {
            const statusFilter = document.getElementById('statusFilter').value.toLowerCase();
            const investmentFilter = document.getElementById('investmentFilter').value;
            const cityFilter = document.getElementById('cityFilter').value.toLowerCase();
            const searchFilter = document.getElementById('searchFilter').value.toLowerCase();
            
            const rows = document.querySelectorAll('.admin-table tbody tr');
            
            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                if (cells.length < 9) return; // Skip empty state row
                
                const applicant = cells[1].textContent.toLowerCase();
                const city = cells[2].textContent.toLowerCase();
                const investment = cells[3].textContent;
                const status = cells[7].textContent.toLowerCase();
                
                const matchesStatus = !statusFilter || status.includes(statusFilter);
                const matchesInvestment = !investmentFilter || investment.includes(investmentFilter);
                const matchesCity = !cityFilter || city.includes(cityFilter);
                const matchesSearch = !searchFilter || applicant.includes(searchFilter);
                
                if (matchesStatus && matchesInvestment && matchesCity && matchesSearch) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
    </script>
</body>
</html>
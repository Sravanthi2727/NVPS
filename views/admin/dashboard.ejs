<!-- Dashboard Content -->
<div class="row g-4 mb-4">
    <!-- Cart Requests Card -->
    <div class="col-md-6 col-lg-3">
        <div class="admin-card">
            <h3><i class="fas fa-shopping-cart me-2"></i>Cart Requests</h3>
            <div class="admin-card-number"><%= typeof counts !== 'undefined' && counts.cartOrders !== undefined ? counts.cartOrders : 0 %></div>
            <div class="admin-card-subtitle">Pending orders</div>
            <a href="/admin/cart-requests" class="btn btn-primary">Manage Orders</a>
        </div>
    </div>

    <!-- Art Requests Card -->
    <div class="col-md-6 col-lg-3">
        <div class="admin-card">
            <h3><i class="fas fa-palette me-2"></i>Art Requests</h3>
            <div class="admin-card-number"><%= typeof counts !== 'undefined' && counts.artOrders !== undefined ? counts.artOrders : 0 %></div>
            <div class="admin-card-subtitle">Pending submissions</div>
            <a href="/admin/art-requests" class="btn btn-primary">Review Art</a>
        </div>
    </div>

    <!-- Workshop Requests Card -->
    <div class="col-md-6 col-lg-3">
        <div class="admin-card">
            <h3><i class="fas fa-calendar-alt me-2"></i>Workshop R...</h3>
            <div class="admin-card-number"><%= typeof counts !== 'undefined' && counts.workshops !== undefined ? counts.workshops : 0 %></div>
            <div class="admin-card-subtitle">Pending bookings</div>
            <a href="/admin/workshop-requests" class="btn btn-primary">Manage Workshops</a>
        </div>
    </div>

    <!-- Franchise Applications Card -->
    <div class="col-md-6 col-lg-3">
        <div class="admin-card">
            <h3><i class="fas fa-store me-2"></i>Franchise App..</h3>
            <div class="admin-card-number"><%= typeof counts !== 'undefined' && counts.franchise !== undefined ? counts.franchise : 0 %></div>
            <div class="admin-card-subtitle">Pending applications</div>
            <a href="/admin/franchise" class="btn btn-primary">Review Applications</a>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="admin-card">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Recent Activity</h3>
    </div>
    
    <div class="admin-table">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Customer</th>
                    <th>Details</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (typeof recentActivity !== 'undefined' && recentActivity.length > 0) { %>
                    <% recentActivity.forEach(activity => { %>
                        <tr>
                            <td data-label="Type"><span class="badge bg-info"><%= activity.type %></span></td>
                            <td data-label="Customer">
                                <strong><%= activity.customer %></strong><br>
                                <small style="color: #ccc;"><%= activity.email %></small>
                            </td>
                            <td data-label="Details"><%= activity.details %></td>
                            <td data-label="Date"><%= activity.date %></td>
                            <td data-label="Status">
                                <span class="badge <%= activity.status === 'pending' ? 'bg-warning' : activity.status === 'completed' ? 'bg-success' : 'bg-danger' %>">
                                    <%= activity.status.charAt(0).toUpperCase() + activity.status.slice(1) %>
                                </span>
                            </td>
                            <td data-label="Actions">
                                <button class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center" style="color: #ccc;">No recent activity</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
}

.menu-card:hover {
    transform: translateY(-5px);
    border-color: var(--gold);
    box-shadow: 0 8px 25px rgba(214, 164, 90, 0.2);
}

.menu-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-bottom: 1px solid var(--border);
}

.menu-details {
    padding: 1.5rem;
}

.menu-name {
    color: var(--gold);
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.menu-description {
    color: var(--muted);
    font-size: 0.9rem;
    margin-bottom: 1rem;
    line-height: 1.5;
}


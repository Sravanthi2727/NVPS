<!-- Franchise Page Template - Simplified Dark Theme -->

<!-- Structured Data (JSON-LD) -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Rabuste Coffee",
  "url": "https://rabustecoffee.com",
  "logo": "https://rabustecoffee.com/assets/logo-icon.png",
  "description": "Premium Robusta-only coffee franchise offering artisanal coffee experiences, community workshops, and cultural programming.",
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "US"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "contactType": "franchise development",
    "url": "https://rabustecoffee.com/franchise"
  },
  "sameAs": [
    "https://facebook.com/rabustecoffee",
    "https://instagram.com/rabustecoffee",
    "https://twitter.com/rabustecoffee"
  ]
}
</script>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Franchise Opportunities - Partner with Rabuste Coffee",
  "description": "Join the Rabuste Coffee franchise revolution. Premium Robusta-only café concept with comprehensive support, proven business model, and $75K-$150K investment range.",
  "url": "https://rabustecoffee.com/franchise",
  "mainEntity": {
    "@type": "BusinessOpportunity",
    "name": "Rabuste Coffee Franchise",
    "description": "Premium Robusta-only coffee franchise opportunity with comprehensive brand support and proven business model.",
    "category": "Food & Beverage Franchise",
    "investmentRequired": {
      "@type": "MonetaryAmount",
      "currency": "USD",
      "minValue": 75000,
      "maxValue": 150000
    },
    "areaServed": "United States",
    "provider": {
      "@type": "Organization",
      "name": "Rabuste Coffee"
    }
  },
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://rabustecoffee.com"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Franchise Opportunities",
        "item": "https://rabustecoffee.com/franchise"
      }
    ]
  }
}
</script>

<!-- Include franchise-specific CSS -->
<link rel="stylesheet" href="/css/franchise.css">
<style>
  /* Dark theme override for franchise page */
  body.bg-dark { background: #000 !important; }
  body.text-light { color: #F5F1EB !important; }
  .franchise-page { background: #000 !important; min-height: 100vh; color: #F5F1EB; }
</style>

<div class="franchise-page" itemscope itemtype="https://schema.org/WebPage" style="background: #000 !important; min-height: 100vh; color: #F5F1EB;">
  <!-- Skip Links for Accessibility -->
  <a href="#main-content" class="skip-link">Skip to main content</a>
  <a href="#franchise-form" class="skip-link">Skip to franchise form</a>

  <!-- Hero Section -->
  <header class="franchise-hero-dark" role="banner" aria-labelledby="hero-title" itemscope itemtype="https://schema.org/WPHeader">
    <div class="container">
      <div class="franchise-hero-content-dark text-center">
        <h1 id="hero-title" class="franchise-hero-title-dark" itemprop="headline">Franchise with Rabuste</h1>
        <p class="franchise-hero-subtitle-dark" itemprop="description">A scalable grab-and-go café model built around bold Robusta coffee, culture, and technology.</p>
        <p class="franchise-hero-subtitle-dark" itemprop="description">Designed for compact spaces and high repeat value.</p>
        <nav class="franchise-hero-cta-dark" role="navigation" aria-label="Primary actions">
          <a href="#franchise-form" class="btn btn-franchise-primary-dark" aria-describedby="apply-description">Apply for Franchise</a>
          <span id="apply-description" class="sr-only">Navigate to the franchise application form</span>
          <a href="/about" class="btn btn-franchise-primary-dark" style="background: rgba(212, 175, 55, 0.2); border: 1px solid #D4AF37; color: #D4AF37; margin-left: 12px;">Learn More About Us</a>
        </nav>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main id="main-content" role="main" itemprop="mainContentOfPage">

  <!-- Enquiry Form Section -->
  <section class="franchise-form-section-dark" id="franchise-form" aria-labelledby="form-title" itemscope itemtype="https://schema.org/ContactPage">
    <div class="container">
      <header class="franchise-form-header-dark">
        <h2 id="form-title" class="franchise-form-title-dark" itemprop="name">Start Your Franchise Journey</h2>
        <p class="franchise-form-subtitle-dark" itemprop="description">Ready to bring Rabuste Coffee to your community? Tell us about your vision and we'll guide you through the next steps.</p>
      </header>
      
      <div class="franchise-form-container-dark">
        <form class="franchise-form-dark" id="franchiseEnquiryForm" novalidate itemscope itemtype="https://schema.org/ContactForm">
          <!-- Full Name Field -->
          <div class="franchise-form-group-dark">
            <label for="fullName" class="franchise-form-label-dark">Full Name *</label>
            <input 
              type="text" 
              id="fullName" 
              name="fullName" 
              class="franchise-form-input-dark" 
              placeholder="Enter your full name"
              required
              aria-describedby="fullName-error"
              itemprop="name"
            >
            <div class="franchise-form-error-dark" id="fullName-error" role="alert"></div>
          </div>

          <!-- Email Field -->
          <div class="franchise-form-group-dark">
            <label for="email" class="franchise-form-label-dark">Email Address *</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="franchise-form-input-dark" 
              placeholder="your.email@example.com"
              required
              aria-describedby="email-error"
              itemprop="email"
            >
            <div class="franchise-form-error-dark" id="email-error" role="alert"></div>
          </div>

          <!-- Phone Field -->
          <div class="franchise-form-group-dark">
            <label for="phone" class="franchise-form-label-dark">Phone Number *</label>
            <input 
              type="tel" 
              id="phone" 
              name="phone" 
              class="franchise-form-input-dark" 
              placeholder="(555) 123-4567"
              required
              aria-describedby="phone-error"
              itemprop="telephone"
            >
            <div class="franchise-form-error-dark" id="phone-error" role="alert"></div>
          </div>

          <!-- City & State Field -->
          <div class="franchise-form-group-dark">
            <label for="cityState" class="franchise-form-label-dark">City & State *</label>
            <input 
              type="text" 
              id="cityState" 
              name="cityState" 
              class="franchise-form-input-dark" 
              placeholder="e.g., Austin, TX"
              required
              aria-describedby="cityState-error"
              itemprop="addressLocality"
            >
            <div class="franchise-form-error-dark" id="cityState-error" role="alert"></div>
          </div>

          <!-- Investment Range Field -->
          <div class="franchise-form-group-dark">
            <label for="investmentRange" class="franchise-form-label-dark">Investment Range *</label>
            <select 
              id="investmentRange" 
              name="investmentRange" 
              class="franchise-form-select-dark" 
              required
              aria-describedby="investmentRange-error"
            >
              <option value="">Select your investment range</option>
              <% investmentRanges.forEach(range => { %>
                <option value="<%= range %>"><%= range %></option>
              <% }); %>
            </select>
            <div class="franchise-form-error-dark" id="investmentRange-error" role="alert"></div>
          </div>

          <!-- Message Field -->
          <div class="franchise-form-group-dark">
            <label for="message" class="franchise-form-label-dark">Tell Us About Your Vision</label>
            <textarea 
              id="message" 
              name="message" 
              class="franchise-form-textarea-dark" 
              placeholder="Share your experience, goals, and what excites you about bringing Rabuste Coffee to your community..."
              rows="4"
              maxlength="500"
              aria-describedby="message-counter"
              itemprop="message"
            ></textarea>
            <div class="franchise-form-counter-dark" id="message-counter">0 / 500 characters</div>
          </div>

          <!-- Acknowledgment Checkbox -->
          <div class="franchise-form-group-dark franchise-form-checkbox-group-dark">
            <div class="franchise-form-checkbox-wrapper-dark">
              <input 
                type="checkbox" 
                id="acknowledgment" 
                name="acknowledgment" 
                class="franchise-form-checkbox-dark" 
                required
                aria-describedby="acknowledgment-error"
              >
              <label for="acknowledgment" class="franchise-form-checkbox-label-dark">
                I understand this is a premium Robusta-only concept and I'm interested in learning more about the unique positioning and requirements.
              </label>
            </div>
            <div class="franchise-form-error-dark" id="acknowledgment-error" role="alert"></div>
          </div>

          <!-- Submit Button -->
          <div class="franchise-form-submit-dark">
            <button type="submit" class="btn-franchise-submit-dark" id="submitButton">
              <span class="btn-text">Start My Franchise Journey</span>
              <span class="btn-loading" style="display: none;">
                <svg class="btn-spinner" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-dasharray="31.416" stroke-dashoffset="31.416">
                    <animate attributeName="stroke-dasharray" dur="2s" values="0 31.416;15.708 15.708;0 31.416" repeatCount="indefinite"/>
                    <animate attributeName="stroke-dashoffset" dur="2s" values="0;-15.708;-31.416" repeatCount="indefinite"/>
                  </circle>
                </svg>
                Submitting...
              </span>
            </button>
          </div>

          <!-- Success Message -->
          <div class="franchise-form-success-dark" id="successMessage" style="display: none;" role="alert" aria-live="polite">
            <div class="franchise-form-success-icon-dark" aria-hidden="true">
              <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="24" cy="24" r="20" fill="#228B22"/>
                <path d="M16 24L21 29L32 18" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <h3 class="franchise-form-success-title-dark">Thank You for Your Interest!</h3>
            <p class="franchise-form-success-message-dark">
              We've received your franchise enquiry and are excited about the possibility of partnering with you. 
              Our franchise development team will review your information and contact you within 2 business days to discuss the next steps.
            </p>
            <p class="franchise-form-success-next-dark">
              In the meantime, feel free to <a href="/about" class="franchise-form-success-link-dark">learn more about us</a> 
              to discover the Rabuste Coffee opportunity.
            </p>
          </div>
        </form>
      </div>
    </div>
  </section>

  </main>

  <!-- AI Assistant Feature -->
  <div class="ai-assistant" id="aiAssistant" aria-label="Franchise qualification assistant">
    <!-- Chat Bubble -->
    <button class="ai-chat-bubble" id="aiChatBubble" aria-label="Open franchise qualification helper" aria-expanded="false">
      <svg class="ai-bubble-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M21 15C21 15.5304 20.7893 16.0391 20.4142 16.4142C20.0391 16.7893 19.5304 17 19 17H7L3 21V5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H19C19.5304 3 20.0391 3.21071 20.4142 3.58579C20.7893 3.96086 21 4.46957 21 5V15Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M8 9H16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M8 13H14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <span class="ai-bubble-text">Need help?</span>
    </button>

    <!-- Chat Modal -->
    <div class="ai-chat-modal" id="aiChatModal" role="dialog" aria-labelledby="ai-modal-title" aria-hidden="true">
      <div class="ai-modal-content">
        <header class="ai-modal-header">
          <h3 id="ai-modal-title" class="ai-modal-title">Franchise Qualification Helper</h3>
          <button class="ai-modal-close" id="aiModalClose" aria-label="Close qualification helper">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M18 6L6 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </header>

        <div class="ai-modal-body">
          <!-- Welcome Screen -->
          <div class="ai-screen ai-welcome-screen" id="aiWelcomeScreen">
            <div class="ai-message ai-assistant-message">
              <div class="ai-message-content">
                <p>Hi! I'm here to help you determine if the Rabuste Coffee franchise is a great fit for you.</p>
                <p>I'll ask you three quick questions to provide personalized guidance. Ready to get started?</p>
              </div>
            </div>
            <div class="ai-actions">
              <button class="ai-btn ai-btn-primary" id="aiStartQuestions">Let's Begin</button>
              <button class="ai-btn ai-btn-secondary" id="aiSkipToForm">Skip to Application</button>
            </div>
          </div>

          <!-- Question 1 Screen -->
          <div class="ai-screen ai-question-screen" id="aiQuestion1Screen" style="display: none;">
            <div class="ai-message ai-assistant-message">
              <div class="ai-message-content">
                <p><strong>Question 1 of 3:</strong></p>
                <p>What's your experience with food or beverage businesses?</p>
              </div>
            </div>
            <div class="ai-actions">
              <button class="ai-btn ai-btn-option" data-answer="extensive">Extensive - I've owned/managed F&B businesses</button>
              <button class="ai-btn ai-btn-option" data-answer="some">Some - I've worked in the industry</button>
              <button class="ai-btn ai-btn-option" data-answer="none">None - This would be my first venture</button>
            </div>
          </div>

          <!-- Question 2 Screen -->
          <div class="ai-screen ai-question-screen" id="aiQuestion2Screen" style="display: none;">
            <div class="ai-message ai-assistant-message">
              <div class="ai-message-content">
                <p><strong>Question 2 of 3:</strong></p>
                <p>What's your target investment range for this opportunity?</p>
              </div>
            </div>
            <div class="ai-actions">
              <button class="ai-btn ai-btn-option" data-answer="75-100k">$75K - $100K</button>
              <button class="ai-btn ai-btn-option" data-answer="100-150k">$100K - $150K</button>
              <button class="ai-btn ai-btn-option" data-answer="150k+">$150K+</button>
              <button class="ai-btn ai-btn-option" data-answer="flexible">I'm flexible based on the opportunity</button>
            </div>
          </div>

          <!-- Question 3 Screen -->
          <div class="ai-screen ai-question-screen" id="aiQuestion3Screen" style="display: none;">
            <div class="ai-message ai-assistant-message">
              <div class="ai-message-content">
                <p><strong>Question 3 of 3:</strong></p>
                <p>Are you interested in hands-on or passive ownership?</p>
              </div>
            </div>
            <div class="ai-actions">
              <button class="ai-btn ai-btn-option" data-answer="hands-on">Hands-on - I want to be actively involved</button>
              <button class="ai-btn ai-btn-option" data-answer="semi-passive">Semi-passive - Some involvement with management</button>
              <button class="ai-btn ai-btn-option" data-answer="passive">Passive - Investment with minimal day-to-day involvement</button>
            </div>
          </div>

          <!-- Results Screen -->
          <div class="ai-screen ai-results-screen" id="aiResultsScreen" style="display: none;">
            <div class="ai-message ai-assistant-message">
              <div class="ai-message-content" id="aiResultsContent">
                <!-- Dynamic content will be inserted here -->
              </div>
            </div>
            <div class="ai-actions">
              <button class="ai-btn ai-btn-primary" id="aiGoToForm">Apply Now</button>
              <button class="ai-btn ai-btn-secondary" id="aiStartOver">Start Over</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Backdrop -->
    <div class="ai-modal-backdrop" id="aiModalBackdrop" style="display: none;"></div>
  </div>
</div>

<!-- Include franchise-specific JS -->
<script src="/js/background-optimizer.js"></script>
<script src="/js/image-optimization.js"></script>
<script src="/js/ai.js"></script>
<script src="/js/franchise.js"></script>
<script src="/js/franchise-diagnostic.js"></script>

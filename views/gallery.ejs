<style>
    :root {
        --gold: #d6a45a;
        --gold-soft: #e3b873;
        --text: #f5f2ee;
        --muted: rgba(245, 242, 238, 0.7);
        --dark: #0a0a0a;
        --darker: #000;
    }
    .gallery-item {
        position: relative;
        margin-bottom: 30px;
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        transition: all 0.4s ease;
        background: rgba(20, 20, 20, 0.8);
        border: 1px solid rgba(214, 164, 90, 0.2);
    }
    .gallery-item:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(214, 164, 90, 0.2);
        border-color: var(--gold);
    }
    .gallery-img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        transition: all 0.5s ease;
    }
    .gallery-item:hover .gallery-img {
        transform: scale(1.05);
    }
    .gallery-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
        padding: 2rem 1.5rem 1.5rem;
        color: white;
        transform: translateY(100%);
        transition: transform 0.3s ease;
    }
    .gallery-item:hover .gallery-overlay {
        transform: translateY(0);
    }
    .art-title {
        font-family: 'Playfair Display', serif;
        color: var(--gold);
        margin-bottom: 0.5rem;
        font-size: 1.25rem;
    }
    .art-artist {
        color: var(--muted);
        font-size: 0.9rem;
        margin-bottom: 1rem;
        display: block;
    }
    .art-price {
        font-weight: 600;
        color: var(--gold);
        font-size: 1.1rem;
    }
    .btn-gold {
        background-color: var(--gold);
        color: #000;
        border: none;
        padding: 0.5rem 1.5rem;
        border-radius: 30px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    .btn-gold:hover {
        background-color: var(--gold-soft);
        color: #000;
        transform: translateY(-2px);
    }
    .category-btn {
        background: transparent;
        border: 1px solid var(--gold);
        color: var(--gold);
        padding: 0.5rem 1.5rem;
        margin: 0.25rem;
        border-radius: 30px;
        transition: all 0.3s ease;
        font-weight: 500;
    }
    .category-btn:hover, .category-btn.active {
        background: var(--gold);
        color: #000;
        border-color: var(--gold);
    }
    .hero-section {
        position: relative;
        padding: 6rem 0;
    }

    /* Hero Section Animations */
    .hero-content {
        animation: fadeInUp 1s ease-out;
    }

    .hero-logo {
        animation: fadeInDown 1s ease-out 0.3s both;
    }

    .hero-title {
        animation: slideInLeft 1s ease-out 0.6s both;
        background: linear-gradient(45deg, var(--gold), var(--gold-soft));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-description {
        animation: slideInRight 1s ease-out 0.9s both;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-50px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(50px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
    /* Modal Styles */
    .artwork-modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.9);
        animation: fadeIn 0.3s ease;
    }

    .artwork-modal.show {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .modal-content {
        background: linear-gradient(135deg, #1a1a1a, #2d2d2d);
        border: 1px solid var(--gold);
        border-radius: 15px;
        max-width: 900px;
        width: 90%;
        max-height: 80vh;
        margin: 2rem;
        margin-top: 3rem;
        overflow-y: auto;
        position: relative;
        animation: slideIn 0.3s ease;
    }

    .modal-header {
        background: rgba(214, 164, 90, 0.1);
        border-bottom: 1px solid var(--gold);
        padding: 1.5rem;
        border-radius: 15px 15px 0 0;
        position: relative;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .artwork-main-info {
        flex: 1;
    }

    .artwork-price-display {
        background: linear-gradient(135deg, rgba(214, 164, 90, 0.2), rgba(214, 164, 90, 0.1));
        border: 2px solid var(--gold);
        border-radius: 12px;
        padding: 1rem 1.5rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        box-shadow: 0 4px 15px rgba(214, 164, 90, 0.3);
        animation: priceGlow 2s ease-in-out infinite alternate;
    }

    @keyframes priceGlow {
        from {
            box-shadow: 0 4px 15px rgba(214, 164, 90, 0.3);
        }
        to {
            box-shadow: 0 6px 20px rgba(214, 164, 90, 0.5);
        }
    }

    .price-label {
        color: var(--muted);
        font-size: 1.1rem;
        font-weight: 500;
    }

    .price-value {
        color: var(--gold);
        font-size: 1.4rem;
        font-weight: 700;
        text-shadow: 0 0 10px rgba(214, 164, 90, 0.5);
    }

    .modal-close {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: var(--gold);
        color: #000;
        border: none;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        font-size: 1.5rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .modal-close:hover {
        background: var(--gold-soft);
        transform: rotate(90deg);
    }

    .modal-body {
        padding: 2rem;
    }

    .artwork-detail-img {
        width: 100%;
        max-height: 400px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 1.5rem;
    }

    .artwork-detail-title {
        font-family: 'Playfair Display', serif;
        color: var(--gold);
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .artwork-detail-artist {
        color: var(--muted);
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }

    .artwork-detail-price {
        font-size: 1.5rem;
        color: var(--gold);
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .artwork-detail-description {
        color: var(--text);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .artwork-detail-meta {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .meta-item {
        background: rgba(214, 164, 90, 0.1);
        padding: 0.75rem 1rem;
        border-radius: 8px;
        border: 1px solid rgba(214, 164, 90, 0.2);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        cursor: default;
    }

    .meta-item:hover {
        background: rgba(214, 164, 90, 0.2);
        border-color: var(--gold);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(214, 164, 90, 0.3);
    }

    .meta-label {
        color: var(--muted);
        font-size: 0.9rem;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .meta-item:hover .meta-label {
        color: var(--gold);
    }

    .meta-value {
        color: var(--text);
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .meta-item:hover .meta-value {
        color: var(--gold-soft);
    }

    .highlight {
        color: var(--gold);
        font-weight: 600;
        text-shadow: 0 0 10px rgba(214, 164, 90, 0.3);
    }

    .modal-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @keyframes slideIn {
        from {
            transform: translateY(-50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @media (max-width: 768px) {
        .modal-content {
            width: 95%;
            margin: 1rem;
        }

        .artwork-detail-title {
            font-size: 1.5rem;
        }

        .modal-body {
            padding: 1rem;
        }
    }
</style>

<section class="hero-section position-relative overflow-hidden">
    <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.8)), url('/assets/photowall.jpeg') center/cover; z-index: -1;"></div>
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-12 text-center hero-content">
                <img src="/assets/logo-icon.png" alt="Rabuste Coffee Logo" class="hero-logo" style="display:block; margin:0 auto 20px auto; width:95px;">
                <h1 class="font-playfair display-1 fw-bold mb-4 text-white hero-title">Our Gallery</h1>
                <p class="lead mb-5 fs-4 text-white hero-description">Discover the warm, aesthetic beauty of our brown-themed café through these moments</p>
            </div>
        </div>
    </div>
</section>

<section class="gallery-section py-5" style="padding: 6rem 0;">
    <div class="container">
        <div class="d-flex flex-wrap category-filter justify-content-center mb-4">
            <button class="category-btn active" data-filter="all">All Artworks</button>
            <button class="category-btn" data-filter="painting">Paintings</button>
            <button class="category-btn" data-filter="photography">Photography</button>
            <button class="category-btn" data-filter="sculpture">Sculptures</button>
            <button class="category-btn" data-filter="digital">Digital Art</button>
        </div>

        <div class="row">
            <% if (typeof artworks !== 'undefined' && artworks.length > 0) { %>
                <% artworks.forEach(artwork => { %>
                    <div class="col-lg-4 col-md-6 mb-4" data-category="<%= artwork.category %>">
                        <div class="gallery-item">
                            <img src="<%= artwork.image.startsWith('/') ? artwork.image : '/assets/gallery/' + artwork.image %>" 
                                 alt="<%= artwork.title %>" 
                                 class="gallery-img"
                                 onerror="this.src='/assets/photowall.jpeg'">
                            <div class="gallery-overlay">
                                <h3 class="art-title"><%= artwork.title %></h3>
                                <span class="art-artist">By <%= artwork.artist %></span>
                                <% if (artwork.description) { %>
                                    <p class="text-white small mb-2"><%= artwork.description %></p>
                                <% } %>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="art-price">₹<%= artwork.price %></span>
                                    <button class="btn btn-gold" onclick="showArtworkDetails('<%= artwork._id %>')">View Details</button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center py-5">
                    <p class="text-muted">No artworks available at the moment.</p>
                </div>
            <% } %>
        </div>
    </div>
</section>

<!-- Artwork Details Modal -->
<div id="artworkModal" class="artwork-modal">
    <div class="modal-content">
        <div class="modal-header">
            <div class="artwork-main-info" id="modalHeaderInfo">
                <!-- Content will be dynamically inserted here -->
            </div>
            <button class="modal-close" onclick="closeModal()">&times;</button>
        </div>
        <div class="modal-body" id="modalBody">
            <!-- Content will be dynamically inserted here -->
        </div>
    </div>
</div>

<script>
    // Highlight keywords in description
    function highlightKeywords(text) {
        const keywords = [
            'abstract', 'painting', 'photography', 'sculpture', 'digital', 'art',
            'artist', 'canvas', 'bronze', 'clay', 'oil', 'watercolor', 'landscape',
            'portrait', 'modern', 'contemporary', 'urban', 'nature', 'sunset',
            'city', 'mountains', 'wilderness', 'flow', 'dreams', 'serenity',
            'golden', 'lights', 'eternal', 'mountain', 'digital', 'photography'
        ];
        
        let highlightedText = text;
        keywords.forEach(keyword => {
            const regex = new RegExp(`\\b${keyword}\\b`, 'gi');
            highlightedText = highlightedText.replace(regex, `<span class="highlight">${keyword}</span>`);
        });
        
        return highlightedText;
    }

    // Artwork details functionality
    async function showArtworkDetails(artworkId) {
        console.log('Showing details for artwork ID:', artworkId);
        console.log('Type of artworkId:', typeof artworkId);
        
        try {
            const response = await fetch(`/api/artwork/${artworkId}`);
            console.log('Response status:', response.status);
            
            if (!response.ok) {
                const errorText = await response.text();
                console.error('Error response:', errorText);
                throw new Error(`Artwork not found (Status: ${response.status})`);
            }
            
            const artwork = await response.json();
            console.log('Artwork data received:', artwork);
            
            // Update modal header
            const modalHeader = document.getElementById('modalHeaderInfo');
            modalHeader.innerHTML = `
                <h2 class="artwork-detail-title">${artwork.title}</h2>
                <p class="artwork-detail-artist">By ${artwork.artist}</p>
            `;
            
            // Update modal body
            const modalBody = document.getElementById('modalBody');
            modalBody.innerHTML = `
                <div class="row">
                    <div class="col-md-6">
                        <img src="${artwork.image.startsWith('/') ? artwork.image : '/assets/gallery/' + artwork.image}" 
                             alt="${artwork.title}" 
                             class="artwork-detail-img"
                             onerror="this.src='/assets/photowall.jpeg'">
                        <p class="artwork-detail-description">${highlightKeywords(artwork.description || 'No description available.')}</p>
                    </div>
                    <div class="col-md-6">
                        <div class="artwork-price-display">
                            <span class="price-label">Price:</span>
                            <span class="price-value">₹${artwork.price}</span>
                        </div>
                        
                        <div class="artwork-detail-meta">
                            <div class="meta-item">
                                <span class="meta-label">Category:</span>
                                <span class="meta-value">${artwork.category}</span>
                            </div>
                            ${artwork.year ? `
                            <div class="meta-item">
                                <span class="meta-label">Year:</span>
                                <span class="meta-value">${artwork.year}</span>
                            </div>` : ''}
                            ${artwork.medium ? `
                            <div class="meta-item">
                                <span class="meta-label">Medium:</span>
                                <span class="meta-value">${artwork.medium}</span>
                            </div>` : ''}
                            ${artwork.dimensions ? `
                            <div class="meta-item">
                                <span class="meta-label">Dimensions:</span>
                                <span class="meta-value">${artwork.dimensions}</span>
                            </div>` : ''}
                            <div class="meta-item">
                                <span class="meta-label">Availability:</span>
                                <span class="meta-value">${artwork.availability || 'In Stock'}</span>
                            </div>
                            ${artwork.shipping ? `
                            <div class="meta-item">
                                <span class="meta-label">Shipping:</span>
                                <span class="meta-value">${artwork.shipping}</span>
                            </div>` : ''}
                        </div>
                        
                        <div class="modal-actions">
                            <button class="btn btn-gold" onclick="addToWishlist('${artwork._id}', '${artwork.title}', '${artwork.artist}', ${artwork.price}, '${artwork.image}')">
                                <i class="fas fa-heart me-2"></i>Add to Wishlist
                            </button>
                            <button class="btn btn-outline-light" onclick="purchaseArtwork('${artwork._id}')">
                                <i class="fas fa-shopping-cart me-2"></i>Purchase
                            </button>
                            <button class="btn btn-outline-light" onclick="inquireArtwork('${artwork._id}')">
                                <i class="fas fa-envelope me-2"></i>Inquire
                            </button>
                        </div>
                    </div>
                </div>
            `;

            document.getElementById('artworkModal').classList.add('show');
            document.body.style.overflow = 'hidden';
        } catch (error) {
            console.error('Error fetching artwork details:', error);
            alert('Error loading artwork details: ' + error.message + '. Please try again.');
        }
    }

    // Close modal
    function closeModal() {
        document.getElementById('artworkModal').classList.remove('show');
        document.body.style.overflow = 'auto';
    }

    // Purchase artwork
    function purchaseArtwork(artworkId) {
        alert(`Purchase functionality for artwork would be implemented here. This would connect to your payment processing system.`);
    }

    // Inquire about artwork
    function inquireArtwork(artworkId) {
        alert(`Inquiry form for artwork would be implemented here. This would allow customers to ask questions or request additional information.`);
    }

    // Add to wishlist
    function addToWishlist(id, title, artist, price, image) {
        // Get current wishlist from localStorage
        let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];
        
        // Check if item already exists
        const existingItem = wishlist.find(item => item.id === id);
        if (existingItem) {
            alert('This item is already in your wishlist!');
            return;
        }
        
        // Add new item to wishlist
        wishlist.push({
            id: id,
            title: title,
            artist: artist,
            price: price,
            image: image
        });
        
        // Save to localStorage
        localStorage.setItem('wishlist', JSON.stringify(wishlist));
        
        // Show success message
        alert('Added to wishlist successfully!');
    }

    // Close modal when clicking outside
    document.addEventListener('click', function(event) {
        const modal = document.getElementById('artworkModal');
        if (event.target === modal) {
            closeModal();
        }
    });

    // Close modal with Escape key
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            closeModal();
        }
    });

    document.addEventListener('DOMContentLoaded', function() {
        const filterButtons = document.querySelectorAll('.category-btn');
        const galleryItems = document.querySelectorAll('[data-category]');
        
        filterButtons.forEach(button => {
            button.addEventListener('click', function() {
                filterButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                
                const filter = this.getAttribute('data-filter');
                
                galleryItems.forEach(item => {
                    if (filter === 'all' || item.getAttribute('data-category') === filter) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
            });
        });
    });
</script>

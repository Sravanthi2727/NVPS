    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Scroll-triggered animations
        const observerOptions = {
            threshold: 0.2,
            rootMargin: '0px 0px -100px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const target = entry.target;
                    
                    // Philosophy cards animation
                    if (target.classList.contains('philosophy-card')) {
                        const columnIndex = Array.from(target.parentNode.parentNode.children).indexOf(target.parentNode);
                        const isLeftColumn = columnIndex % 2 === 0;
                        
                        setTimeout(() => {
                            target.classList.add(isLeftColumn ? 'animate-left' : 'animate-right');
                        }, isLeftColumn ? 0 : 400);
                    }
                    
                    // Stats section animation - REMOVED
                    // Stats section no longer has animation
                    
                    // Gallery section animation
                    if (target.classList.contains('gallery-grid')) {
                        const galleryItems = target.querySelectorAll('.gallery-item');
                        galleryItems.forEach((item, index) => {
                            setTimeout(() => {
                                item.classList.add('animate-gallery');
                            }, index * 200); // 0ms, 200ms, 400ms, 600ms
                        });
                    }
                    
                    // Manifesto section animation
                    if (target.classList.contains('manifesto-section')) {
                        setTimeout(() => {
                            target.classList.add('animate-manifesto');
                        }, 200);
                    }
                    
                    // Stop observing once animated
                    observer.unobserve(target);
                }
            });
        }, observerOptions);
        
        // Observe elements for scroll animations
        document.addEventListener('DOMContentLoaded', () => {
            // Observe philosophy cards individually
            document.querySelectorAll('.philosophy-card').forEach(card => {
                observer.observe(card);
            });
            
            // IMPORTANT: Do NOT observe individual stat cards - only observe the section
            // Remove any existing observation of stat cards
            document.querySelectorAll('.stat-card').forEach(card => {
                // Don't observe individual cards
            });
            
            // Observe ONLY the entire stats section
            const statsSection = document.querySelector('.stats-section');
            if (statsSection) {
                console.log('Setting up observer for stats section');
                observer.observe(statsSection);
            }
            
            // Observe manifesto section
            const manifestoSection = document.querySelector('.manifesto-section');
            if (manifestoSection) {
                observer.observe(manifestoSection);
            }
            
            // Observe gallery section for scroll-triggered animations
            const gallerySection = document.querySelector('.gallery-grid');
            if (gallerySection) {
                console.log('Setting up observer for gallery section');
                observer.observe(gallerySection);
            }
        });
        
        // Parallax scrolling effect
        let ticking = false;
        
        function updateParallax() {
            const scrolled = window.pageYOffset;
            const parallaxElements = document.querySelectorAll('[data-parallax]');
            
            parallaxElements.forEach(element => {
                const speed = element.dataset.parallax || 0.5;
                const yPos = -(scrolled * speed);
                element.style.transform = `translateY(${yPos}px)`;
            });
            
            ticking = false;
        }
        
        function requestTick() {
            if (!ticking) {
                window.requestAnimationFrame(updateParallax);
                ticking = true;
            }
        }
        
        // Initialize parallax
        document.addEventListener('DOMContentLoaded', () => {
            // Add parallax data attributes
            const heroBefore = document.querySelector('.hero-section::before');
            if (heroBefore) {
                heroBefore.setAttribute('data-parallax', '0.3');
            }
            
            const philosophyBefore = document.querySelector('.philosophy-section::before');
            if (philosophyBefore) {
                philosophyBefore.setAttribute('data-parallax', '0.2');
            }
            
            const manifestoBefore = document.querySelector('.manifesto-section::before');
            if (manifestoBefore) {
                manifestoBefore.setAttribute('data-parallax', '0.1');
            }
            
            const manifestoAfter = document.querySelector('.manifesto-section::after');
            if (manifestoAfter) {
                manifestoAfter.setAttribute('data-parallax', '0.05');
            }
            
            // Scroll event listener
            window.addEventListener('scroll', requestTick);
            
            // Initial update
            requestTick();
        });
    </script>

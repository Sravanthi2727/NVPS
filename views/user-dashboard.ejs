<script>
// API functions for dynamic data
async function fetchWishlist() {
  try {
    console.log('Fetching wishlist...');
    const response = await fetch('/api/wishlist');
    console.log('Wishlist response status:', response.status);
    
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    
    const data = await response.json();
    console.log('Wishlist response data:', data);
    return data;
  } catch (error) {
    console.error('Error fetching wishlist:', error);
    return [];
  }
}

async function fetchCart() {
  try {
    console.log('Fetching cart...');
    const response = await fetch('/api/cart', {
      credentials: 'include' // Include session cookies
    });
    console.log('Cart response status:', response.status);
    
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    
    const data = await response.json();
    console.log('Cart response data:', data);
    return data;
  } catch (error) {
    console.error('Error fetching cart:', error);
    return [];
  }
}

// Update navbar counts
function updateCartCount() {
  // Update cart count in navbar if element exists
  fetch('/api/cart/count', {
    credentials: 'include' // Include session cookies
  })
  .then(response => response.json())
  .then(data => {
    const cartCount = document.querySelector('.cart-count');
    if (cartCount) {
      cartCount.textContent = data.count || 0;
    }
  })
  .catch(error => console.error('Error updating cart count:', error));
}

function updateWishlistCount() {
  // Update wishlist count in navbar if element exists
  fetch('/api/wishlist/count', {
    credentials: 'include' // Include session cookies
  })
  .then(response => response.json())
  .then(data => {
    const wishlistCount = document.querySelector('.wishlist-count');
    if (wishlistCount) {
      wishlistCount.textContent = data.count || 0;
    }
  })
  .catch(error => console.error('Error updating wishlist count:', error));
}

async function fetchOrders() {
  try {
    console.log('Fetching user orders...');
    const response = await fetch('/api/user/orders', {
      credentials: 'include' // Include session cookies
    });
    if (!response.ok) {
      throw new Error('Failed to fetch orders');
    }
    const orders = await response.json();
    console.log('Fetched orders:', orders);
    return orders;
  } catch (error) {
    console.error('Error fetching orders:', error);
    return [];
  }
}

async function fetchWorkshops() {
  try {
    const response = await fetch('/api/workshops');
    return await response.json();
  } catch (error) {
    console.error('Error fetching workshop registrations:', error);
    return [];
  }
}

async function fetchRequests() {
  try {
    const response = await fetch('/api/requests');
    return await response.json();
  } catch (error) {
    console.error('Error fetching requests:', error);
    return [];
  }
}

async function fetchFranchise() {
  try {
    console.log('Fetching user franchise applications...');
    const response = await fetch('/api/user/franchise');
    if (!response.ok) {
      throw new Error('Failed to fetch franchise applications');
    }
    const data = await response.json();
    console.log('Fetched franchise applications:', data);
    return data.success ? data.applications : [];
  } catch (error) {
    console.error('Error fetching franchise applications:', error);
    return [];
  }
}

function renderWishlist(items) {
  console.log('renderWishlist called with:', items);
  const container = document.getElementById('wishlistItems');
  
  if (!container) {
    console.error('wishlistItems container not found!');
    return;
  }
  
  if (items.length === 0) {
    console.log('No wishlist items, showing empty state');
    container.innerHTML = `
      <div class="col-12 text-center py-5">
        <p style="color: #ffffff; font-size: 0.85rem; margin-bottom: 15px; font-weight: 500;">No items in your wishlist yet.</p>
        <a href="/menu" class="btn" style="background-color: #d6a45a; border: none; color: #000;">Browse Menu</a>
      </div>
    `;
  } else {
    console.log('Rendering', items.length, 'wishlist items');
    container.innerHTML = items.map(item => {
      // Detect if item is art or menu item
      const isArtItem = (item.type === 'art') || 
                        (item.image && (item.image.includes('/assets/gallery/') || item.image.includes('/gallery/'))) ||
                        (item.name && (item.name.includes('by ') || item.name.includes('Wilderness') || item.name.includes('Mountain') || item.name.includes('Serenity')));
      
      return `
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card ${isArtItem ? 'art-item-card' : 'menu-item-card'}">
          <div class="card-body">
            ${item.image ? `<img src="${item.image}" class="img-fluid rounded mb-2" alt="${item.name}" style="max-height: 150px; width: 100%; object-fit: cover;">` : ''}
            <h5 class="card-title">${item.name}</h5>

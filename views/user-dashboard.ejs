<script>
// Calendar functionality - Define early to avoid reference errors
let workshopCalendar = null;
let currentWorkshops = [];

// Initialize calendar view toggle
function initializeCalendarToggle() {
  console.log('üîß Initializing calendar toggle...');
  
  try {
    const showListBtn = document.getElementById('showListView');
    const showCalendarBtn = document.getElementById('showCalendarView');
    const listView = document.getElementById('workshopListView');
    const calendarView = document.getElementById('workshopCalendarView');

    console.log('Elements found:', {
      showListBtn: !!showListBtn,
      showCalendarBtn: !!showCalendarBtn,
      listView: !!listView,
      calendarView: !!calendarView
    });

    if (!showListBtn || !showCalendarBtn || !listView || !calendarView) {
      console.error('‚ùå Some elements not found for calendar toggle');
      return;
    }

    console.log('‚úÖ All elements found, setting up event listeners');
    
    showListBtn.addEventListener('click', function() {
      console.log('üìã Switching to list view');
      try {
        // Switch to list view
        listView.style.display = 'block';
        calendarView.style.display = 'none';
        
        // Update button states
        showListBtn.className = 'btn btn-sm';
        showListBtn.style.cssText = 'background-color: #d6a45a; border: none; color: #000;';
        
        showCalendarBtn.className = 'btn btn-sm btn-outline-secondary';
        showCalendarBtn.style.cssText = 'border-color: #d6a45a; color: #d6a45a; background-color: transparent;';
      } catch (error) {
        console.error('Error switching to list view:', error);
      }
    });

    showCalendarBtn.addEventListener('click', function() {
      console.log('üìÖ Switching to calendar view');
      try {
        // Switch to calendar view
        listView.style.display = 'none';
        calendarView.style.display = 'block';
        
        // Update button states
        showCalendarBtn.className = 'btn btn-sm';
        showCalendarBtn.style.cssText = 'background-color: #d6a45a; border: none; color: #000;';
        
        showListBtn.className = 'btn btn-sm btn-outline-secondary';
        showListBtn.style.cssText = 'border-color: #d6a45a; color: #d6a45a; background-color: transparent;';
        
        // Initialize calendar if not already done
        console.log('üìÖ Initializing calendar...');
        if (!workshopCalendar) {
          initializeWorkshopCalendar();
        } else {
          console.log('üìÖ Calendar already exists, refreshing events');
          // Refresh calendar events
          updateCalendarEvents();
        }
      } catch (error) {
        console.error('Error switching to calendar view:', error);
      }
    });
    
    console.log('‚úÖ Event listeners attached successfully');
  } catch (error) {
    console.error('‚ùå Error initializing calendar toggle:', error);
  }
}

// Initialize workshop calendar
function initializeWorkshopCalendar() {
  console.log('üìÖ Initializing workshop calendar...');
  
  try {
    const calendarEl = document.getElementById('workshopCalendarContainer');
    
    if (!calendarEl) {
      console.error('‚ùå Calendar container not found');
      return;
    }

    console.log('‚úÖ Calendar container found, checking FullCalendar...');
    
    if (typeof FullCalendar === 'undefined') {
      console.error('‚ùå FullCalendar library not loaded');
      // Show error message to user
      calendarEl.innerHTML = `
        <div class="alert alert-warning" style="background-color: rgba(255, 193, 7, 0.1); border: 1px solid #ffc107; color: #ffc107; margin: 20px;">
          <i class="bi bi-exclamation-triangle"></i> 
          <strong>Calendar Loading Issue</strong><br>
          The calendar library is still loading. Please try again in a moment.
        </div>
      `;
      return;
    }

    console.log('‚úÖ FullCalendar library loaded, creating calendar...');

    workshopCalendar = new FullCalendar.Calendar(calendarEl, {
      initialView: 'dayGridMonth',
      headerToolbar: {
        left: 'prev,next today',
        center: 'title',
        right: 'dayGridMonth,listWeek'
      },
      height: 600,
      events: [],
      eventDisplay: 'block',
      dayMaxEvents: 3,
      moreLinkClick: 'popover',
      eventClick: function(info) {
        console.log('üìÖ Event clicked:', info.event.title);
        showWorkshopEventDetails(info.event);
      },
      eventMouseEnter: function(info) {
        // Add hover effect
        info.el.style.transform = 'scale(1.05)';
        info.el.style.zIndex = '1000';
      },
      eventMouseLeave: function(info) {
        // Remove hover effect
        info.el.style.transform = 'scale(1)';
        info.el.style.zIndex = 'auto';
      },
      dayCellDidMount: function(info) {
        // Style today's cell
        if (info.isToday) {
          info.el.style.backgroundColor = 'rgba(214, 164, 90, 0.2)';
        }
      },
      eventDidMount: function(info) {
        // Custom event styling
        info.el.style.borderRadius = '6px';
        info.el.style.border = '2px solid #d6a45a';
        info.el.style.fontWeight = '600';
        info.el.style.fontSize = '12px';
        info.el.style.padding = '2px 6px';
        
        // Add workshop status indicator
        const status = info.event.extendedProps.status;
        if (status === 'confirmed') {
          info.el.style.backgroundColor = '#28a745';
          info.el.style.borderColor = '#28a745';
        } else if (status === 'completed') {
          info.el.style.backgroundColor = '#6c757d';
          info.el.style.borderColor = '#6c757d';
        } else if (status === 'cancelled') {
          info.el.style.backgroundColor = '#dc3545';
          info.el.style.borderColor = '#dc3545';
        }
      }
    });

    console.log('üìÖ Rendering calendar...');
    workshopCalendar.render();
    console.log('‚úÖ Calendar rendered successfully');
    
    // Load events after calendar is rendered
    setTimeout(() => {
      console.log('üìÖ Loading calendar events...');
      updateCalendarEvents();
    }, 500);
    
  } catch (error) {
    console.error('‚ùå Error creating calendar:', error);
    const calendarEl = document.getElementById('workshopCalendarContainer');
    if (calendarEl) {
      calendarEl.innerHTML = `
        <div class="alert alert-danger" style="background-color: rgba(220, 53, 69, 0.1); border: 1px solid #dc3545; color: #dc3545; margin: 20px;">
          <i class="bi bi-exclamation-circle"></i> 
          <strong>Calendar Error</strong><br>
          Failed to initialize calendar: ${error.message}
        </div>
      `;
    }
  }
}

// Update calendar with workshop events
function updateCalendarEvents() {
  if (!workshopCalendar) {
    console.log('‚ùå No calendar instance to update');
    return;
  }

  console.log('üìÖ Fetching calendar events...');
  
  // Fetch calendar events from API
  fetch('/api/user/workshops/calendar-events', {
    credentials: 'include'
  })
  .then(response => {
    console.log('üìÖ Calendar API response status:', response.status);
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    return response.json();
  })
  .then(data => {
    console.log('üìÖ Calendar events response:', data);
    if (data.success && data.events) {
      console.log('üìÖ Found', data.events.length, 'workshop events');
      console.log('üìÖ Events data:', data.events);
      
      workshopCalendar.removeAllEvents();
      
      if (data.events.length > 0) {
        workshopCalendar.addEventSource(data.events);
        console.log('‚úÖ Calendar updated with', data.events.length, 'workshop events');
      } else {
        console.log('‚ÑπÔ∏è No workshop events to display');
        // Add a sample event to test if calendar is working
        const sampleEvent = {
          id: 'sample-1',
          title: 'Sample Workshop (Test)',
          start: '2026-01-18T10:00:00',
          end: '2026-01-18T12:00:00',
          backgroundColor: '#d6a45a',
          borderColor: '#d6a45a',
          textColor: '#000'
        };
        workshopCalendar.addEvent(sampleEvent);
        console.log('üìÖ Added sample event for testing');
      }
    } else {
      console.error('Failed to fetch calendar events:', data.error);
    }
  })
  .catch(error => {
    console.error('Error fetching calendar events:', error);
    // Add a sample event to test if calendar is working
    const sampleEvent = {
      id: 'sample-error',
      title: 'Test Event (API Error)',
      start: '2026-01-18T14:00:00',
      end: '2026-01-18T16:00:00',
      backgroundColor: '#dc3545',
      borderColor: '#dc3545',
      textColor: '#fff'
    };
    workshopCalendar.addEvent(sampleEvent);
    console.log('üìÖ Added sample event due to API error');
  });
}


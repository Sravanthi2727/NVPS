      renderWishlist(wishlist);
    }
  } catch (error) {
    console.error('Error removing from wishlist:', error);
  }
}

async function removeFromCart(itemId) {
  try {
    const response = await fetch(`/api/cart/${itemId}`, {
      method: 'DELETE'
    });
    const result = await response.json();
    if (result.success) {
      // Refresh cart
      const cart = await fetchCart();
      renderCart(cart);
    }
  } catch (error) {
    console.error('Error removing from cart:', error);
  }
}

async function moveToCart(itemId, name, price) {
  try {
    // First add to cart
    const response = await fetch('/api/cart', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ itemId, name, price, quantity: 1 })
    });
    const result = await response.json();
    
    if (result.success) {
      // Then remove from wishlist
      await removeFromWishlist(itemId);
      // Refresh cart
      const cart = await fetchCart();
      renderCart(cart);
    } else {
      console.error('Failed to add to cart:', result.message);
    }
  } catch (error) {
    console.error('Error moving to cart:', error);
  }
}

async function updateQuantity(itemId, change) {
  try {
    console.log('Updating quantity for item:', itemId, 'change:', change);
    
    // Get current cart to find the item
    const cart = await fetchCart();
    const item = cart.find(item => item.itemId === itemId);
    
    if (!item) {
      console.error('Item not found in cart:', itemId);
      return;
    }
    
    const newQuantity = item.quantity + change;
    console.log('New quantity:', newQuantity);
    
    if (newQuantity <= 0) {
      // Remove item if quantity is 0 or less
      await removeFromCart(itemId);
    } else {
      // Update quantity
      const response = await fetch(`/api/cart/${itemId}`, {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ quantity: newQuantity })
      });
      
      const result = await response.json();
      console.log('Update result:', result);
      
      if (result.success) {
        // Refresh cart
        const updatedCart = await fetchCart();
        renderCart(updatedCart);
      } else {
        console.error('Failed to update quantity:', result.message);
      }
    }
  } catch (error) {
    console.error('Error updating quantity:', error);
  }
}

// Filter orders function
function filterOrders() {
  const statusFilter = document.getElementById('orderStatusFilter').value;
  const typeFilter = document.getElementById('orderTypeFilter').value;
  
  let filteredOrders = window.allOrders || [];
  
  // Filter by status
  if (statusFilter) {
    filteredOrders = filteredOrders.filter(order => order.status === statusFilter);
  }
  
  // Filter by type (for future art orders)
  if (typeFilter === 'menu') {
    // Currently all orders are menu orders, but this is ready for art orders
    filteredOrders = filteredOrders.filter(order => order.type !== 'art');
  } else if (typeFilter === 'art') {
    filteredOrders = filteredOrders.filter(order => order.type === 'art');
  }
  
  renderOrders(filteredOrders);
}


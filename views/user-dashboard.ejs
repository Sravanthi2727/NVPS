function renderRequests(requests) {
  const container = document.getElementById('requestItems');
  
  if (requests.length === 0) {
    container.innerHTML = `
      <div class="col-12 text-center py-5">
        <p style="color: #ffffff; font-size: 0.85rem; margin-bottom: 15px; font-weight: 500;">Start your creative journey with us</p>
        <button type="button" class="btn" style="background-color: #d6a45a; border: none; color: #000;" data-bs-toggle="modal" data-bs-target="#newRequestModal">

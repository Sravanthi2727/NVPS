async function cancelWorkshopRegistration(registrationId) {
  if (!confirm('Are you sure you want to cancel this workshop registration?')) {
    return;
  }
  
  try {
    const response = await fetch(`/api/workshops/${registrationId}`, {
      method: 'DELETE'
    });
    
    const result = await response.json();
    
    if (result.success) {
      // Refresh workshop registrations
      const workshops = await fetchWorkshops();
      renderWorkshops(workshops);
      showToast('Workshop registration cancelled successfully', 'success');
    } else {
      showToast('Failed to cancel workshop registration', 'error');
    }
  } catch (error) {
    console.error('Error cancelling workshop registration:', error);
    showToast('Failed to cancel workshop registration', 'error');
  }
}


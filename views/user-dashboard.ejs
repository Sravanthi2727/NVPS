async function confirmArtPayment() {
  if (!window.selectedArtPaymentMethod || !window.currentLocationData) {
    showToast('Please select a payment method', 'error');
    return;
  }
  
  try {
    // Get art items from cart
    const cart = await fetchCart();
    const artItems = cart.filter(item => item.type === 'art' || 
                                (item.image && item.image.includes('/assets/gallery/')) ||
                                (item.name && (item.name.includes('by ') || item.name.includes('Wilderness') || item.name.includes('Mountain') || item.name.includes('Serenity'))));
    
    const orderData = {
      items: artItems,
      deliveryAddress: window.currentLocationData,
      paymentMethod: window.selectedArtPaymentMethod,
      orderType: 'art'
    };
    
    if (window.selectedArtPaymentMethod === 'cod') {
      // Process COD order
      await processArtOrder(orderData);
    } else if (window.selectedArtPaymentMethod === 'online') {

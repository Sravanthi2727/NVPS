<script>
// API functions for dynamic data
async function fetchWishlist() {
  try {
    const response = await fetch('/api/wishlist');
    return await response.json();
  } catch (error) {
    console.error('Error fetching wishlist:', error);
    return [];
  }
}

async function addToWishlist(item) {
  try {
    const response = await fetch('/api/wishlist', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(item)
    });
    return await response.json();
  } catch (error) {
    console.error('Error adding to wishlist:', error);
    return { success: false };
  }
}

async function removeFromWishlist(id) {
  try {
    const response = await fetch(`/api/wishlist/${id}`, {
      method: 'DELETE'
    });
    return await response.json();
  } catch (error) {
    console.error('Error removing from wishlist:', error);
    return { success: false };
  }
}

async function fetchCart() {
  try {
    const response = await fetch('/api/cart');
    return await response.json();
  } catch (error) {
    console.error('Error fetching cart:', error);
    return [];
  }
}

async function addToCart(item) {
  try {
    const response = await fetch('/api/cart', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(item)
    });
    return await response.json();
  } catch (error) {
    console.error('Error adding to cart:', error);
    return { success: false };
  }
}

async function removeFromCart(id) {
  try {
    const response = await fetch(`/api/cart/${id}`, {
      method: 'DELETE'
    });
    return await response.json();
  } catch (error) {
    console.error('Error removing from cart:', error);
    return { success: false };
  }
}

async function fetchWorkshops() {
  try {
    const response = await fetch('/api/workshops');
    return await response.json();
  } catch (error) {
    console.error('Error fetching workshops:', error);
    return [];
  }
}

async function registerForWorkshop(workshop) {
  try {
    const response = await fetch('/api/workshops', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(workshop)
    });
    return await response.json();
  } catch (error) {
    console.error('Error registering for workshop:', error);
    return { success: false };
  }
}

async function fetchRequests() {
  try {
    const response = await fetch('/api/requests');
    return await response.json();
  } catch (error) {
    console.error('Error fetching requests:', error);
    return [];
  }
}

async function submitRequest(request) {
  try {
    const response = await fetch('/api/requests', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(request)
    });
    return await response.json();
  } catch (error) {
    console.error('Error submitting request:', error);
    return { success: false };
  }
}

function redirectToPage() {
  const dropdown = document.getElementById('browseDropdown');
  const selectedValue = dropdown.value;
  
  if (selectedValue) {
    window.location.href = selectedValue;
  }
}

document.addEventListener('DOMContentLoaded', async function() {
  // Load dashboard data from API
  const wishlist = await fetchWishlist();
  const cart = await fetchCart();
  const workshops = await fetchWorkshops();
  const requests = await fetchRequests();

  renderWishlist(wishlist);
  renderCart(cart);
  renderWorkshops(workshops);
  renderRequests(requests);

  // Handle request type change
  const requestTypeSelect = document.getElementById('requestType');
  if (requestTypeSelect) {
    requestTypeSelect.addEventListener('change', function() {
      const artDetails = document.getElementById('artDetails');
      const workshopDetails = document.getElementById('workshopDetails');
      
      if (this.value === 'sell-art') {
        artDetails.style.display = 'block';
        workshopDetails.style.display = 'none';
      } else if (this.value === 'conduct-workshop') {
        artDetails.style.display = 'none';
        workshopDetails.style.display = 'block';
      } else {
        artDetails.style.display = 'none';
        workshopDetails.style.display = 'none';
      }
    });
  }

  // Handle form submission
  const form = document.getElementById('requestForm');
  if (form) {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const requestType = document.getElementById('requestType').value;
      const title = document.getElementById('requestTitle').value;
      const description = document.getElementById('requestDescription').value;
      
      if (!requestType || !title || !description) {
        alert('Please fill in all required fields');
        return;
      }
      
      const request = {
        type: requestType,
        title: title,
        description: description,
        status: 'pending',
        createdAt: new Date().toISOString()
      };
      
      const result = await submitRequest(request);
      if (result.success) {
        alert('Request submitted successfully!');
        form.reset();
        const modal = bootstrap.Modal.getInstance(document.getElementById('newRequestModal'));
        modal.hide();
        
        // Refresh requests list
        const updatedRequests = await fetchRequests();
        renderRequests(updatedRequests);
      } else {
        alert('Error submitting request. Please try again.');
      }
    });
  }

  // Handle submit button
  const submitButton = document.getElementById('submitRequest');
  if (submitButton) {
    submitButton.addEventListener('click', async function() {
      const requestType = document.getElementById('requestType').value;
      const title = document.getElementById('requestTitle').value;
      const description = document.getElementById('requestDescription').value;
      
      if (!requestType || !title || !description) {
        alert('Please fill in all required fields');
        return;
      }
      
      const request = {
        type: requestType,
        title: title,
        description: description,
        status: 'pending',
        createdAt: new Date().toISOString()
      };
      
      const result = await submitRequest(request);
      if (result.success) {
        alert('Request submitted successfully!');
        document.getElementById('requestForm').reset();
        const modal = bootstrap.Modal.getInstance(document.getElementById('newRequestModal'));
        modal.hide();
        
        // Refresh requests list
        const updatedRequests = await fetchRequests();
        renderRequests(updatedRequests);
      } else {
        alert('Error submitting request. Please try again.');
      }
    });
  }
});

function loadWishlist() {
  // Load wishlist from localStorage
  const wishlistItems = JSON.parse(localStorage.getItem('wishlist')) || [];
  renderWishlist(wishlistItems);
}

function loadCart() {
  // Load cart from localStorage
  const cartItems = JSON.parse(localStorage.getItem('cart')) || [];
  renderCart(cartItems);
}

function loadWorkshops() {
  // Load workshop registrations from localStorage
  const registrations = JSON.parse(localStorage.getItem('workshopRegistrations')) || [];
  renderWorkshops(registrations);
}

function loadRequests() {
  // Load requests from localStorage
  const requests = JSON.parse(localStorage.getItem('requests')) || [];
  renderRequests(requests);
}

function renderWishlist(items) {
  const container = document.getElementById('wishlistItems');
  
  if (items.length === 0) {
    container.innerHTML = `
      <div class="col-12 text-center py-5">
        <p style="color: #ffffff; font-size: 0.85rem; margin-bottom: 15px; font-weight: 500;">No items in your wishlist yet.</p>
        <a href="/gallery" class="btn" style="background-color: #d6a45a; border: none; color: #000;">Browse Gallery</a>
      </div>
    `;
    return;
  }

  container.innerHTML = items.map(item => `
    <div class="col-md-4 mb-4">
      <div class="card">
        <img src="${item.image}" class="card-img-top" alt="${item.title}">
        <div class="card-body">
          <h5 class="card-title">${item.title}</h5>
          <p class="card-text">by ${item.artist}</p>
          <p class="card-text"><strong>${item.price}</strong></p>
          <button class="btn" style="background-color: #d6a45a; border: none; color: #000;">Purchase</button>
          <button class="btn btn-outline-danger btn-sm" onclick="removeFromWishlist(${item.id})">Remove</button>
        </div>
      </div>
    </div>
  `).join('');
}

function renderCart(items) {
  const container = document.getElementById('cartItems');
  
  if (items.length === 0) {
    container.innerHTML = `
      <div class="col-12 text-center py-5">
        <p style="color: #ffffff; font-size: 0.85rem; margin-bottom: 15px; font-weight: 500;">Your cart is empty.</p>
        <a href="/menu" class="btn" style="background-color: #d6a45a; border: none; color: #000;">View Menu</a>
      </div>
    `;
    return;
  }

  let total = 0;
  const itemsHtml = items.map(item => {
    total += item.price * item.quantity;
    return `
      <div class="col-12 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col-md-2">
                <img src="${item.image}" class="img-fluid rounded" alt="${item.name}">
              </div>
              <div class="col-md-4">
                <h5>${item.name}</h5>
                <p>${item.price} each</p>
              </div>
              <div class="col-md-3">
                <div class="input-group">
                  <button class="btn btn-outline-secondary" onclick="updateQuantity(${item.id}, -1)">-</button>
                  <input type="number" class="form-control text-center" value="${item.quantity}" min="1" readonly>
                  <button class="btn btn-outline-secondary" onclick="updateQuantity(${item.id}, 1)">+</button>
                </div>
              </div>
              <div class="col-md-2">
                <h5>${(item.price * item.quantity).toFixed(2)}</h5>
              </div>
              <div class="col-md-1">
                <button class="btn btn-outline-danger" onclick="removeFromCart(${item.id})">
                  <i class="bi bi-trash"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    `;
  }).join('');

  container.innerHTML = itemsHtml + `
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-8">
              <h4 style="color: #d6a45a; font-weight: bold;">Total: ${total.toFixed(2)}</h4>
            </div>
            <div class="col-md-4 text-end">
              <button class="btn" style="background-color: #d6a45a; border: none; color: #000;">Proceed to Checkout</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  `;
}


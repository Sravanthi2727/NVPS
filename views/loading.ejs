<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loading... | Rabuste Coffee</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    
    <!-- Main CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <style>
        :root {
            --gold: #d6a45a;
            --cream: #f5f2ee;
            --dark: #0a0a0a;
            --muted: #ccc;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            background: #000;
            color: #fff;
            font-family: 'Montserrat', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
        }
        
        /* Background Effects */
        .loading-container {
            position: relative;
            width: 100%;
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 2;
        }
        
        .loading-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 50%, rgba(214, 164, 90, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 50%, rgba(214, 164, 90, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 50% 50%, rgba(214, 164, 90, 0.05) 0%, transparent 70%),
                linear-gradient(rgba(10, 10, 10, 0.9), rgba(10, 10, 10, 0.95));
            animation: pulseGlow 4s ease-in-out infinite alternate;
            z-index: 1;
        }
        
        /* Coffee Bean Animations */
        .coffee-bean {
            position: absolute;
            width: 60px;
            height: 40px;
            background: linear-gradient(135deg, #6B4423 0%, #8B5A2B 25%, #A0522D 50%, #8B5A2B 75%, #6B4423 100%);
            border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
            opacity: 0.3;
            z-index: 1;
            box-shadow: 
                inset 0 2px 4px rgba(0,0,0,0.3),
                inset 0 -2px 4px rgba(255,255,255,0.1),
                0 4px 8px rgba(0,0,0,0.2);
        }
        
        .coffee-bean::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 60px;
            height: 2px;
            background: rgba(0,0,0,0.2);
            border-radius: 50%;
            transform: translate(-50%, -50%) rotate(-45deg);
        }
        
        .coffee-bean-1 {
            top: 20%;
            left: 10%;
            transform: rotate(-30deg);
            animation: floatBean1 8s ease-in-out infinite;
        }
        
        .coffee-bean-2 {
            top: 60%;
            right: 15%;
            transform: rotate(45deg);
            animation: floatBean2 10s ease-in-out infinite;
        }
        
        .coffee-bean-3 {
            bottom: 25%;
            left: 20%;
            transform: rotate(15deg);
            animation: floatBean3 12s ease-in-out infinite;
        }
        
        /* Coffee Steam/Vapor Effects */
        .coffee-steam {
            position: absolute;
            width: 30px;
            height: 30px;
            background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0.4) 50%, rgba(255,255,255,0.1) 100%);
            border-radius: 50%;
            filter: blur(2px);
            opacity: 0;
            animation: steamRise 4s ease-out infinite;
        }
        
        .coffee-steam-1 {
            top: 15%;
            left: 25%;
            width: 20px;
            height: 40px;
            animation-delay: 0s;
        }
        
        .coffee-steam-2 {
            top: 10%;
            right: 30%;
            width: 25px;
            height: 50px;
            animation-delay: 1s;
        }
        
        .coffee-steam-3 {
            top: 20%;
            left: 50%;
            width: 18px;
            height: 35px;
            animation-delay: 2s;
        }
        
        .coffee-steam-4 {
            bottom: 30%;
            right: 20%;
            width: 22px;
            height: 45px;
            animation-delay: 1.5s;
        }
        
        .coffee-steam-5 {
            bottom: 15%;
            left: 70%;
            width: 20px;
            height: 40px;
            animation-delay: 2.5s;
        }
        
        /* Loading Content */
        .loading-content {
            text-align: center;
            z-index: 3;
            position: relative;
        }
        
        .loading-logo {
            width: 120px;
            height: 120px;
            margin-bottom: 2rem;
            animation: logoFloat 6s ease-in-out infinite alternate;
            filter: drop-shadow(0 0 20px rgba(214, 164, 90, 0.3));
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        
        .coffee-cup-icon {
            font-size: 3rem;
            color: var(--gold);
            text-shadow: 0 0 15px rgba(214, 164, 90, 0.6);
            animation: cupGlow 3s ease-in-out infinite alternate;
            margin-bottom: 0.5rem;
        }
        
        .brand-text {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--cream);
            text-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            letter-spacing: 0.5px;
        }
        
        .loading-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--gold);
            margin-bottom: 1rem;
            text-shadow: 0 0 20px rgba(214, 164, 90, 0.5);
            animation: titleGlow 3s ease-in-out infinite alternate, titleFloat 4s ease-in-out infinite;
            background: linear-gradient(45deg, #d6a45a, #f5f2ee, #d6a45a);
            background-size: 200% 200%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .loading-message {
            font-size: 1.2rem;
            color: #e8dcc0;
            margin-bottom: 2rem;
            font-weight: 300;
            animation: fadeInOut 2s ease-in-out infinite;
        }
        
        .loading-subtitle {
            font-size: 1rem;
            color: var(--muted);
            font-style: italic;
            margin-bottom: 3rem;
        }
        
        /* Loading Spinner */
        .coffee-spinner {
            width: 80px;
            height: 80px;
            margin: 0 auto 2rem;
            position: relative;
            animation: spinnerRotate 3s linear infinite;
        }
        
        .coffee-spinner::before {
            content: '☕';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 3rem;
            color: var(--gold);
            text-shadow: 0 0 15px rgba(214, 164, 90, 0.6);
        }
        
        .coffee-spinner::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border: 3px solid rgba(214, 164, 90, 0.2);
            border-radius: 50%;
            border-top: 3px solid var(--gold);
            animation: spinnerPulse 1.5s ease-in-out infinite;
        }
        
        /* Progress Bar */
        .loading-progress {
            width: 300px;
            height: 4px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 2px;
            margin: 0 auto;
            overflow: hidden;
            position: relative;
        }
        
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--gold), #f5f2ee);
            border-radius: 2px;
            animation: progressAnimation 2s ease-in-out infinite;
            box-shadow: 0 0 10px rgba(214, 164, 90, 0.4);
        }
        
        /* Animations */
        @keyframes pulseGlow {
            0% {
                opacity: 0.3;
                transform: scale(1);
            }
            100% {
                opacity: 0.7;
                transform: scale(1.1);
            }
        }
        
        @keyframes floatBean1 {
            0%, 100% {
                transform: rotate(-30deg) translate(0, 0);
            }
            25% {
                transform: rotate(-20deg) translate(15px, -10px);
            }
            50% {
                transform: rotate(-40deg) translate(-8px, -15px);
            }
            75% {
                transform: rotate(-25deg) translate(10px, 8px);
            }
        }
        
        @keyframes floatBean2 {
            0%, 100% {
                transform: rotate(45deg) translate(0, 0);
            }
            33% {
                transform: rotate(60deg) translate(-15px, 10px);
            }
            66% {
                transform: rotate(30deg) translate(18px, -12px);
            }
        }
        
        @keyframes floatBean3 {
            0%, 100% {
                transform: rotate(15deg) translate(0, 0);
            }
            40% {
                transform: rotate(25deg) translate(-10px, -15px);
            }
            80% {
                transform: rotate(5deg) translate(12px, 10px);
            }
        }
        
        @keyframes titleGlow {
            0% {
                text-shadow: 0 0 20px rgba(214, 164, 90, 0.5);
                filter: brightness(1);
            }
            100% {
                text-shadow: 0 0 40px rgba(214, 164, 90, 0.8), 0 0 60px rgba(214, 164, 90, 0.4);
                filter: brightness(1.2);
            }
        }
        
        @keyframes cupGlow {
            0% {
                text-shadow: 0 0 15px rgba(214, 164, 90, 0.6);
                filter: brightness(1);
            }
            50% {
                text-shadow: 0 0 25px rgba(214, 164, 90, 0.8), 0 0 35px rgba(214, 164, 90, 0.4);
                filter: brightness(1.2);
            }
            100% {
                text-shadow: 0 0 20px rgba(214, 164, 90, 0.6), 0 0 40px rgba(214, 164, 90, 0.5);
                filter: brightness(1);
            }
        }
        
        @keyframes fadeInOut {
            0%, 100% {
                opacity: 0.5;
            }
            50% {
                opacity: 1;
            }
        }
        
        @keyframes logoFloat {
            0%, 100% {
                transform: translateY(0px) scale(1);
            }
            50% {
                transform: translateY(-15px) scale(1.05);
            }
        }
        
        @keyframes spinnerRotate {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }
        
        @keyframes steamRise {
            0% {
                opacity: 0;
                transform: translateY(20px) scale(0.8);
            }
            50% {
                opacity: 0.6;
                transform: translateY(0px) scale(1);
            }
            100% {
                opacity: 0;
                transform: translateY(-30px) scale(0.8);
            }
        }
        
        @keyframes progressAnimation {
            0% {
                width: 0%;
                opacity: 0.7;
            }
            50% {
                width: 70%;
                opacity: 1;
            }
            100% {
                width: 100%;
                opacity: 0.7;
            }
        }
        
        /* Responsive Design */
        @media (max-width: 768px) {
            .loading-title {
                font-size: 2rem;
            }
            
            .loading-message {
                font-size: 1rem;
            }
            
            .loading-progress {
                width: 250px;
            }
            
            .coffee-bean {
                width: 40px;
                height: 30px;
            }
        }
    </style>
</head>
<body>
    <!-- Animated Background Elements -->
    <div class="coffee-bean coffee-bean-1"></div>
    <div class="coffee-bean coffee-bean-2"></div>
    <div class="coffee-bean coffee-bean-3"></div>
    
    <!-- Coffee Steam/Vapor Effects -->
    <div class="coffee-steam coffee-steam-1"></div>
    <div class="coffee-steam coffee-steam-2"></div>
    <div class="coffee-steam coffee-steam-3"></div>
    <div class="coffee-steam coffee-steam-4"></div>
    <div class="coffee-steam coffee-steam-5"></div>
    
    <!-- Main Loading Container -->
    <div class="loading-container">
        <div class="loading-content">
            <!-- Logo -->
            <div class="loading-logo">
                <div class="coffee-cup-icon">☕</div>
                <div class="brand-text">Rabuste Coffee</div>
            </div>
            
            <!-- Title -->
            <h1 class="loading-title">Rabuste Coffee</h1>
            
            <!-- Loading Message -->
            <p class="loading-message">Please wait while we prepare your experience...</p>
            <p class="loading-subtitle">Crafting something bold for you</p>
            
            <!-- Coffee Spinner -->
            <div class="coffee-spinner"></div>
            
            <!-- Progress Bar -->
            <div class="loading-progress">
                <div class="progress-fill"></div>
            </div>
        </div>
    </div>
    
    <script>
        // Add some dynamic loading messages
        const loadingMessages = [
            "Please wait while we prepare your experience...",
            "Brewing something bold for you...",
            "Crafting your perfect coffee moment...",
            "Loading the rebellion...",
            "Preparing your creative space...",
            "Almost ready with your bold experience..."
        ];
        
        const subtitles = [
            "Crafting something bold for you",
            "The Robusta Rebellion is loading",
            "Where coffee meets creativity",
            "Fueling your creative journey"
        ];
        
        let messageIndex = 0;
        let subtitleIndex = 0;
        
        // Rotate messages every 3 seconds
        setInterval(() => {
            messageIndex = (messageIndex + 1) % loadingMessages.length;
            subtitleIndex = (subtitleIndex + 1) % subtitles.length;
            
            const messageElement = document.querySelector('.loading-message');
            const subtitleElement = document.querySelector('.loading-subtitle');
            
            if (messageElement) {
                messageElement.style.opacity = '0';
                setTimeout(() => {
                    messageElement.textContent = loadingMessages[messageIndex];
                    messageElement.style.opacity = '1';
                }, 300);
            }
            
            if (subtitleElement) {
                subtitleElement.style.opacity = '0';
                setTimeout(() => {
                    subtitleElement.textContent = subtitles[subtitleIndex];
                    subtitleElement.style.opacity = '1';
                }, 300);
            }
        }, 3000);
        
        // Add smooth transitions for text changes
        document.querySelectorAll('.loading-message, .loading-subtitle').forEach(element => {
            element.style.transition = 'opacity 0.3s ease-in-out';
        });
    </script>
</body>
</html>
